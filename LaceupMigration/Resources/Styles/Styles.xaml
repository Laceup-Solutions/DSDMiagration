    <LinearGradientBrush x:Key="NicerButtonGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource colorLaceupLightBlue}" Offset="0"/>
        <GradientStop Color="{StaticResource colorLaceupDark}" Offset="0.5"/>
        <GradientStop Color="{StaticResource colorLaceupDarkerBlue}" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="NicerButtonDisabledBrush" Color="{StaticResource colorLaceupDisable}"/>

    <!-- Gray gradient for disabled state (PrimaryButton and DeleteButton) -->
    <LinearGradientBrush x:Key="NicerButtonDisabledGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Gray200}" Offset="0"/>
        <GradientStop Color="{StaticResource Gray300}" Offset="0.5"/>
        <GradientStop Color="{StaticResource Gray400}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Red button gradient (based on nicerButtonRed / button_background_red) -->
    <LinearGradientBrush x:Key="NicerButtonRedGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource colorLaceupLightRed}" Offset="0"/>
        <GradientStop Color="{StaticResource colorLaceupRed}" Offset="0.5"/>
        <GradientStop Color="{StaticResource colorLaceupDarkerRed}" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="NicerButtonRedDisabledBrush" Color="{StaticResource colorLaceupRedDisable}"/>

    <Style  x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Background" Value="{StaticResource NicerButtonGradient}"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="Padding" Value="10,7"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="White"/>
                            <Setter Property="Background" Value="{StaticResource NicerButtonDisabledGradient}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver"/>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
