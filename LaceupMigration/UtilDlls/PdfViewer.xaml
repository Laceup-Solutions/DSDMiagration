<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pdf="clr-namespace:Maui.PDFView;assembly=Maui.PDFView"
             x:Class="LaceupMigration.UtilDlls.PdfViewer"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="PDF Viewer"
             BackgroundColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="MENU" 
                     Clicked="OnMenuClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="0">
            <ActivityIndicator x:Name="isLoading" 
                               Color="{StaticResource PrimaryDark}" 
                               IsRunning="True"
                               IsVisible="True"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
            
            <Label x:Name="ErrorLabel"
                   Text="Unable to load PDF"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="{StaticResource Gray600}"
                   FontSize="16" />
            
            <pdf:PdfView x:Name="www" 
                        VerticalOptions="FillAndExpand" 
                        IsHorizontal="False" 
                        BackgroundColor="White"
                        IsVisible="False" />
        </StackLayout>
    </ContentPage.Content>
</local:LaceupContentPage>

