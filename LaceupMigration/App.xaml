<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LaceupMigration"
             xmlns:converters="clr-namespace:LaceupMigration.Converters"
             x:Class="LaceupMigration.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:IsStringNotEmptyConverter x:Key="IsStringNotEmptyConverter" />
            <converters:IsNotZeroConverter x:Key="IsNotZeroConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:CreditTypeConverter x:Key="CreditTypeConverter" />
            <converters:ExpandIconConverter x:Key="ExpandIconConverter" />
            <converters:HasLeftContentToColumnDefinitionsConverter x:Key="HasLeftContentToColumnDefinitionsConverter" />
            <converters:HasLeftContentToContentColumnConverter x:Key="HasLeftContentToContentColumnConverter" />
            <converters:HasLeftContentToBalanceColumnConverter x:Key="HasLeftContentToBalanceColumnConverter" />
            <converters:HasLeftContentToColumnSpanConverter x:Key="HasLeftContentToColumnSpanConverter" />
            <converters:BoolToTextDecorationsConverter x:Key="BoolToTextDecorationsConverter" />
            <converters:BoolToUnderlineConverter x:Key="BoolToUnderlineConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:IsNotFreeItemConverter x:Key="IsNotFreeItemConverter" />
            <converters:ShowWhenHasValuesAndPricesConverter x:Key="ShowWhenHasValuesAndPricesConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
