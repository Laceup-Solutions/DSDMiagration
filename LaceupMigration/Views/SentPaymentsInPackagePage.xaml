<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.SentPaymentsInPackagePage"
             Shell.TabBarIsVisible="False"
             Title="Payments in Package">
    <Grid RowDefinitions="Auto,*" RowSpacing="8">
        <Label Grid.Row="0"
               Text="{Binding TotalAmountText}"
               FontSize="18"
               FontAttributes="Bold"
               Margin="16,8"
               HorizontalOptions="Center"
               IsVisible="{Binding ShowTotal}" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Payments}"
                        Margin="16,0,16,8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:SentPaymentInPackageItemViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8"
                           InputTransparent="True">
                        <VerticalStackLayout Spacing="4" InputTransparent="True">
                            <Label Text="{Binding ClientName}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding PaymentType}"
                                   FontSize="14"
                                   TextColor="#666666" />
                            <Label Text="{Binding AmountText}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   IsVisible="{Binding ShowTotal}" />
                            <Label Text="{Binding DateText}"
                                   FontSize="13"
                                   TextColor="#666666" />
                            <Label Text="{Binding CommentText}"
                                   FontSize="13"
                                   TextColor="#666666"
                                   IsVisible="{Binding ShowComment}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

