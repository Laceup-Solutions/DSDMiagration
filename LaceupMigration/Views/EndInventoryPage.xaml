<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.EndInventoryPage"
             Shell.TabBarIsVisible="False"
             Title="End Inventory">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <HorizontalStackLayout Grid.Row="0"
                               Spacing="8"
                               Margin="8">
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="{Binding FilterButtonText}"
                    Command="{Binding ToggleFilterCommand}"
                    HorizontalOptions="FillAndExpand" />
            <!-- <Button Text="Print" -->
            <!--         Command="{Binding PrintCommand}" -->
            <!--         HorizontalOptions="FillAndExpand" /> -->
        </HorizontalStackLayout>

        <SearchBar Grid.Row="1"
                   Text="{Binding SearchText}"
                   Placeholder="Search products..."
                   Margin="8,0"
                   TextChanged="OnSearchTextChanged" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding InventoryItems}"
                        Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:EndInventoryItemViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding CurrentQuantity, StringFormat='Current: {0:F2}'}"
                                       FontSize="14"
                                       TextColor="#666666" />
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="{Binding Lot, StringFormat='Lot: {0}'}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding Lot, Converter={StaticResource IsStringNotEmptyConverter}}" />
                                    <Label Text="{Binding Weight, StringFormat='Weight: {0:F2}'}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding Weight, Converter={StaticResource IsNotZeroConverter}}" />
                                    <Label Text="{Binding UomText}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding ShowUom}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Button Text="{Binding EndingQuantity, StringFormat='End: {0:F2}'}"
                                        Clicked="OnQuantityButtonClicked"
                                        WidthRequest="100"
                                        FontSize="14"
                                        Padding="8,8"
                                        BackgroundColor="{StaticResource Gray300}"
                                        TextColor="Black"
                                        HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

