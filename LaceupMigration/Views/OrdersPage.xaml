<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.OrdersPage"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="vm:OrdersPageViewModel"
             Title="Transactions">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" Order="Primary" Priority="0" IconImageSource="{mi:MaterialOutlined Icon=Menu, IconColor=Black}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <DataTemplate x:Key="OrderItemTemplate" x:DataType="vm:OrderListItemViewModel">
            <Grid ColumnDefinitions="Auto,*,Auto"
                  Padding="8,4"
                  BackgroundColor="White"
                  InputTransparent="False">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ViewDetailsCommand}" />
                </Grid.GestureRecognizers>
                <CheckBox Grid.Column="0"
                          IsChecked="{Binding IsSelected}"
                          VerticalOptions="Center"
                          Margin="0,0,8,0" />
                <Label Grid.Column="1"
                       Text="{Binding DateText}"
                       FontSize="14"
                       TextColor="Black"
                       VerticalOptions="Center" />
                <Label Grid.Column="2"
                       Text="{Binding TotalText}"
                       FontSize="14"
                       TextColor="Black"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShowTotal}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ClientGroupTemplate" x:DataType="vm:ClientOrderGroupViewModel">
            <VerticalStackLayout Spacing="0">
                <BoxView HeightRequest="1"
                         BackgroundColor="#E0E0E0"
                         Margin="0" />
                <Grid Padding="8,6"
                      BackgroundColor="#DDF0FF">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="{Binding ClientName}"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="Black" />
                    </VerticalStackLayout>
                </Grid>
                <CollectionView ItemsSource="{Binding Orders}"
                                ItemTemplate="{StaticResource OrderItemTemplate}"
                                SelectionMode="None" />
            </VerticalStackLayout>
        </DataTemplate>

        <DataTemplate x:Key="TransactionSectionTemplate" x:DataType="vm:TransactionSectionViewModel">
            <VerticalStackLayout Spacing="0">
                <CollectionView ItemsSource="{Binding ClientGroups}"
                                ItemTemplate="{StaticResource ClientGroupTemplate}"
                                SelectionMode="None" />
            </VerticalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="12"
          RowSpacing="8">
        <Border Grid.Row="0"
                StrokeThickness="1"
                BackgroundColor="White"
                IsVisible="{Binding IsSearchVisible}"
                Padding="12,4"
                StrokeShape="RoundRectangle 12">
            <Grid ColumnDefinitions="*,Auto">
                <SearchBar Grid.Column="0"
                           Placeholder="Search transactions"
                           FontSize="14"
                           BackgroundColor="White"
                           Text="{Binding SearchQuery}"
                           SearchButtonPressed="SearchBar_SearchButtonPressed" />
                <Button Grid.Column="1"
                        Text="âš™"
                        FontSize="18"
                        BackgroundColor="Transparent"
                        Command="{Binding SearchMenuCommand}"
                        WidthRequest="40" />
            </Grid>
        </Border>

        <ScrollView Grid.Row="1"
                    Orientation="Horizontal"
                    IsVisible="{Binding ShowButtonsLayout}">
            <Grid  HeightRequest="40" ColumnSpacing="5" ColumnDefinitions="auto,auto,auto,auto"
                   HorizontalOptions="Start">
                <Button Grid.Column="0" Command="{Binding SelectTransactionTypeCommand}" ImageSource="{mi:MaterialOutlined Icon=ArrowDropDown, IconColor=White}" Text="{Binding SelectedTransactionType}"/>
                <Button Text="Print"
                        Grid.Column="1"
                        Command="{Binding PrintCommand}" />
                <Button Text="DEX"
                        Grid.Column="2"
                        Command="{Binding DexCommand}"
                        IsVisible="{Binding ShowDexButton}" />
                <Button Text="Send"
                        Grid.Column="3"
                        Command="{Binding SendCommand}" />
            </Grid>
        </ScrollView>

        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto"
              IsVisible="{Binding ShowSelectAllLayout}">
            <HorizontalStackLayout Grid.Column="0"
                                   Spacing="8"
                                   VerticalOptions="Center">
                <CheckBox IsChecked="{Binding IsSelectAllChecked}"
                          CheckedChanged="CheckBox_CheckedChanged" />
                <Label Text="{Binding SelectAllText}"
                       TextColor="#1A1A1A"
                       FontAttributes="Bold"
                       FontSize="14"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectAllCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            <Label Grid.Column="1"
                   Text="{Binding TotalText}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="#1A1A1A"
                   HorizontalOptions="End"
                   IsVisible="{Binding ShowTotal}" />
        </Grid>

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding TransactionSections}"
                        ItemTemplate="{StaticResource TransactionSectionTemplate}"
                        SelectionMode="None"
                        EmptyView="No transactions available." />
    </Grid>
</ContentPage>
