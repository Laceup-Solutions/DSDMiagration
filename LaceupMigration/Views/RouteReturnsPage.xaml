<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.RouteReturnsPage"
             Shell.TabBarIsVisible="False"
             Title="Route Returns">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <HorizontalStackLayout Grid.Row="0"
                               Spacing="8"
                               Margin="8">
            <Button Text="{Binding SaveButtonText}"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsEnabled="{Binding IsSaved, Converter={StaticResource InvertedBoolConverter}}" />
            <Button Text="{Binding FilterButtonText}"
                    Command="{Binding ToggleFilterCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsEnabled="{Binding IsSaved, Converter={StaticResource InvertedBoolConverter}}" />
            <Button Text="Print"
                    Command="{Binding PrintCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Done"
                    Command="{Binding DoneCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsSaved}" />
        </HorizontalStackLayout>

        <SearchBar Grid.Row="1"
                   Text="{Binding SearchText}"
                   Placeholder="Search products..."
                   BackgroundColor="White"
                   Margin="8,0"
                   TextChanged="OnSearchTextChanged"
                   IsEnabled="{Binding IsSaved, Converter={StaticResource InvertedBoolConverter}}" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Returns}"
                        Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:RouteReturnViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <!-- Product Name and Details -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="{Binding Lot, StringFormat='Lot: {0}'}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding Lot, Converter={StaticResource IsStringNotEmptyConverter}}" />
                                    <Label Text="{Binding Weight, StringFormat='Weight: {0:F2}'}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding Weight, Converter={StaticResource IsNotZeroConverter}}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <!-- Quantities Row -->
                            <Grid ColumnDefinitions="*,*,*,*,*" ColumnSpacing="4">
                                <!-- Reships (read-only) -->
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="Reships"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Reships, StringFormat='{0:F2}'}"
                                           FontSize="14"
                                           HorizontalOptions="Center" />
                                </VerticalStackLayout>
                                
                                <!-- Dumps (read-only) -->
                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="Dumps"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Dumps, StringFormat='{0:F2}'}"
                                           FontSize="14"
                                           HorizontalOptions="Center" />
                                </VerticalStackLayout>
                                
                                <!-- Returns (read-only) -->
                                <VerticalStackLayout Grid.Column="2" Spacing="2">
                                    <Label Text="Returns"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />
                                    <Label Text="{Binding Returns, StringFormat='{0:F2}'}"
                                           FontSize="14"
                                           HorizontalOptions="Center" />
                                </VerticalStackLayout>
                                
                                <!-- Damaged (button) -->
                                <VerticalStackLayout Grid.Column="3" Spacing="2">
                                    <Label Text="Damaged"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />
                                    <Button Text="{Binding DamagedInTruck, StringFormat='{0:F2}'}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditDamagedCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="{StaticResource Gray300}"
                                            TextColor="Black"
                                            FontSize="12"
                                            HeightRequest="30"
                                            WidthRequest="60"
                                            IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSaved, Converter={StaticResource InvertedBoolConverter}}" />
                                </VerticalStackLayout>
                                
                                <!-- Unload (button) -->
                                <VerticalStackLayout Grid.Column="4" Spacing="2">
                                    <Label Text="Unload"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />
                                    <Button Text="{Binding Unload, StringFormat='{0:F2}'}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditUnloadCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="{StaticResource Gray300}"
                                            TextColor="Black"
                                            FontSize="12"
                                            HeightRequest="30"
                                            WidthRequest="60"
                                            IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsSaved, Converter={StaticResource InvertedBoolConverter}}" />
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

