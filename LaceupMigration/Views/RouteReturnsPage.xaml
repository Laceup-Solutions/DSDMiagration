<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.RouteReturnsPage"
             Shell.TabBarIsVisible="False"
             Title="Route Returns">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <HorizontalStackLayout Grid.Row="0"
                               Spacing="8"
                               Margin="8">
            <Button Text="Add Return"
                    Command="{Binding AddReturnCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <SearchBar Grid.Row="1"
                   Text="{Binding SearchText}"
                   Placeholder="Search products..."
                   Margin="8,0"
                   TextChanged="OnSearchTextChanged" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Returns}"
                        Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:RouteReturnViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding ClientName}"
                                       FontSize="14"
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                            <Entry Grid.Column="1"
                                   Text="{Binding Quantity, StringFormat='{0:F2}'}"
                                   WidthRequest="100"
                                   Keyboard="Numeric"
                                   TextChanged="OnQuantityChanged" />
                            <Button Grid.Column="2"
                                    Text="Delete"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteReturnCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="Red"
                                    TextColor="White" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

