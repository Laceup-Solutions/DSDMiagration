<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="LaceupMigration.SplashPage"
			 Shell.NavBarIsVisible="False"
			 BackgroundColor="{StaticResource White}">
	<Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*">
		<Grid Grid.Row="1" Padding="24" RowSpacing="16" ColumnDefinitions="*">
			<VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
				<Image Source="splash1" HeightRequest="200" WidthRequest="200"></Image>
				<ActivityIndicator IsRunning="True" IsVisible="True" Color="{DynamicResource Primary}" />
			</VerticalStackLayout>
		</Grid>
	</Grid>
</ContentPage>


