<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.LogViewerPage"
             Shell.TabBarIsVisible="False"
             Title="Log File"
             x:DataType="vm:LogViewerPageViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="MENU" Command="{Binding ShowMenuCommand}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,Auto,*">
        <Button Grid.Row="0"
                Text="Send by Email"
                Command="{Binding SendByEmailCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontSize="16"
                Margin="16,8"
                Padding="16,12" />

        <Label Grid.Row="1"
               Text="{Binding StatusMessage}"
               FontSize="14"
               TextColor="#666666"
               Margin="16,8"
               IsVisible="{Binding HasStatusMessage}" />

        <ScrollView Grid.Row="2">
            <VerticalStackLayout>
                <Label Text="{Binding LogContent}"
                       FontFamily="Courier"
                       FontSize="12"
                       BackgroundColor="White"
                       Margin="8"
                       LineBreakMode="CharacterWrap"
                       VerticalOptions="Start"
                       HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</local:LaceupContentPage>

