<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.ReportsPage"
             Shell.TabBarIsVisible="False"
             Title="Reports">
    <CollectionView ItemsSource="{Binding Reports}"
                    Margin="8">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="vm:ReportItemViewModel">
                <Button Padding="16"
                       Margin="0,4"
                       Text="{Binding Name}"
                       Style="{StaticResource PrimaryButton}"
                       BackgroundColor="{StaticResource Gray100}"
                       Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectReportCommand}"
                       CommandParameter="{Binding .}"
                       CornerRadius="8">
                </Button>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</local:LaceupContentPage>
