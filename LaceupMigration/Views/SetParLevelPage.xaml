<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="LaceupMigration.Views.SetParLevelPage"
             Shell.TabBarIsVisible="False"
             Title="Set Par Level">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <VerticalStackLayout Grid.Row="0" Spacing="4" Margin="16,8">
            <Label Text="Set Date:" FontSize="12" TextColor="Gray" />
            <DatePicker Date="{Binding SetDate}"
                       Format="MM/dd/yyyy"
                       MinimumDate="01/01/2000"
                       MaximumDate="{Binding Source={x:Static sys:DateTime.Now}}" />
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="16,0">
            <Button Text="{Binding FilterButtonText}"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding FilterCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Search"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SearchCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Save"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Print"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding PrintCommand}"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding ParLevelLines}"
                        Margin="16,0,16,8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:ParLevelLineViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8"
                           InputTransparent="True">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" InputTransparent="True">
                            <Label Grid.Column="0"
                                   Text="{Binding ProductName}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Entry Grid.Column="1"
                                   Text="{Binding Qty, StringFormat='{0:F2}'}"
                                   WidthRequest="100"
                                   Keyboard="Numeric"
                                   IsReadOnly="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ReadOnly}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

