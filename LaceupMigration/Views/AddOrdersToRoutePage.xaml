<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AddOrdersToRoutePage"
             Shell.TabBarIsVisible="False"
             Title="Add Orders to Route">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <SearchBar Grid.Row="0"
                   Text="{Binding SearchText}"
                   Placeholder="Search orders..."
                   Margin="8"
                   TextChanged="OnSearchTextChanged" />

        <HorizontalStackLayout Grid.Row="1"
                               Spacing="8"
                               Margin="8,0">
            <Button Text="Select All"
                    Command="{Binding SelectAllCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Add Selected"
                    Command="{Binding AddSelectedCommand}"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Orders}"
                        Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:OrderRouteItemViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                            <CheckBox Grid.Column="0"
                                     IsChecked="{Binding IsSelected}"
                                     VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="{Binding ClientName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding OrderDate, StringFormat='Date: {0:MM/dd/yyyy}'}"
                                       FontSize="14"
                                       TextColor="#666666" />
                                <Label Text="{Binding Total, StringFormat='Total: ${0:F2}'}"
                                       FontSize="14"
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

