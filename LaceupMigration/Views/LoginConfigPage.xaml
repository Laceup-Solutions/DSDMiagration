<?xml version="1.0" encoding="utf-8" ?>
<base:MainTabContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:base="clr-namespace:LaceupMigration"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         x:Class="LaceupMigration.LoginConfigPage"
                         Shell.NavBarIsVisible="False"
                         Shell.BackButtonBehavior="{x:Null}">
	<Grid x:Name="RootGrid">
		<ScrollView>
			<VerticalStackLayout Padding="24" >
				<Image Source="icon144x144.png"
					   WidthRequest="100"
					   HeightRequest="100"
					   HorizontalOptions="Center"
					   Margin="0,50,0,30" />

				<Label Text="Welcome To LaceUp"
					   HorizontalOptions="Center"
					   FontAttributes="Bold"
					   TextColor="{DynamicResource PrimaryTextColor}"
					   FontSize="20"
					   Margin="0,0,0,0" />

				<Label HorizontalOptions="Center"
					   FontSize="14"
					   Margin="0,0,0,15">
					<Label.FormattedText>
						<FormattedString>
							<Span Text="Support Contact: " />
							<Span Text="1(786) 437-4380"
								  TextDecorations="Underline"
								  TextColor="{StaticResource colorLaceupDark}">
								<Span.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding SupportContactCommand}" />
								</Span.GestureRecognizers>
							</Span>
						</FormattedString>
					</Label.FormattedText>
				</Label>

				<Grid ColumnDefinitions="*,*"
					  IsVisible="{Binding IsBusy}">
					<ActivityIndicator Grid.ColumnSpan="2" IsRunning="True" IsVisible="True" />
				</Grid>

				<Grid ColumnDefinitions="*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5"
					  WidthRequest="300"
					  HorizontalOptions="Center">
					<Border Grid.Row="0" Padding="0">
						<Border.StrokeShape>
							<RoundRectangle CornerRadius="5" />
						</Border.StrokeShape>
						<Entry
					       Text="{Binding ServerAddress}"
					       Placeholder="Server Address"
					       Focused="VisualElement_OnFocused"
					       HorizontalTextAlignment="Center" />
					</Border>

					<Border Grid.Row="1" Padding="0">
						<Border.StrokeShape>
							<RoundRectangle CornerRadius="5" />
						</Border.StrokeShape>
						<Entry
						   Text="{Binding Port}"
						   Keyboard="Numeric"
						   Placeholder="Port"
						   Focused="VisualElement_OnFocused"
						   HorizontalTextAlignment="Center" />
					</Border>

					<Border Grid.Row="2" Padding="0">
						<Border.StrokeShape>
							<RoundRectangle CornerRadius="5" />
						</Border.StrokeShape>

						<Entry
						       Text="{Binding SalesmanId}"
						       Keyboard="Numeric"
						       Focused="VisualElement_OnFocused"
						       Placeholder="Salesman Id"
						       HorizontalTextAlignment="Center"
						       Margin="0,0,0,0" />
					</Border>
					
						<Button Grid.Row="3" Text="Sign In"
						        Style="{StaticResource PrimaryButton}"
						        Command="{Binding SignInCommand}" />
				</Grid>
				
				<Button Text="Need help?"
					   HorizontalOptions="Center"
					   TextColor="{StaticResource colorLaceupDark}"
					   Command="{Binding NeedHelpCommand}"
					   Margin="0,15,0,0"
					   BackgroundColor="Transparent"
					   >
				</Button>
			</VerticalStackLayout>
		</ScrollView>
	</Grid>
</base:MainTabContentPage>


