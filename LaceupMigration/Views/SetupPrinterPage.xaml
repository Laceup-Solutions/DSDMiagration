<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.SetupPrinterPage"
             Shell.TabBarIsVisible="False"
             Title="Printer Setup">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Printer Configuration"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <Picker Title="Printer Type"
                    ItemsSource="{Binding PrinterTypes}"
                    SelectedItem="{Binding SelectedPrinterType}"
                    ItemDisplayBinding="{Binding Name}" />

            <Entry Text="{Binding PrinterName}"
                   Placeholder="Printer Name"
                   FontSize="16" />

            <Entry Text="{Binding PrinterAddress}"
                   Placeholder="Printer IP Address or Name"
                   FontSize="16" />

            <Entry Text="{Binding PrinterPort, StringFormat='{0}'}"
                   Placeholder="Port (optional)"
                   Keyboard="Numeric"
                   FontSize="16" />

            <Frame Padding="16"
                   BackgroundColor="{StaticResource Gray100}"
                   HasShadow="False"
                   CornerRadius="8">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Print Settings:"
                           FontSize="16"
                           FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="8">
                        <CheckBox IsChecked="{Binding IsDefaultPrinter}"
                                  VerticalOptions="Center" />
                        <Label Text="Set as Default Printer"
                               VerticalOptions="Center"
                               FontSize="14" />
                    </HorizontalStackLayout>

                    <Entry Text="{Binding PaperWidth, StringFormat='{0}'}"
                           Placeholder="Paper Width (mm)"
                           Keyboard="Numeric"
                           FontSize="16" />

                    <Entry Text="{Binding PaperHeight, StringFormat='{0}'}"
                           Placeholder="Paper Height (mm)"
                           Keyboard="Numeric"
                           FontSize="16" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Test Print"
                    Command="{Binding TestPrintCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    Margin="0,8,0,0" />

            <Button Text="Cancel"
                    Command="{Binding CancelCommand}"
                    FontSize="16"
                    Padding="16,12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

