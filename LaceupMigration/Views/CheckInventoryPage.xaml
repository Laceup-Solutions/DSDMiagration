<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.CheckInventoryPage"
             Shell.TabBarIsVisible="False"
             Title="Check Inventory">
    <Grid RowDefinitions="Auto,*" RowSpacing="8">
        <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="16,8">
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Print"
                    Command="{Binding PrintCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding ShowPrintButton}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding InventoryLines}"
                        Margin="16,0,16,8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:CheckInventoryLineViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8"
                           InputTransparent="True">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8" InputTransparent="True">
                            <VerticalStackLayout Grid.Column="0" Spacing="4" InputTransparent="True">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding OnHandText}"
                                       FontSize="13"
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                                    Text="{Binding QtyText}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SetQuantityCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    WidthRequest="80" />
                            <Button Grid.Column="2"
                                    Text="+"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddQuantityCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    WidthRequest="50" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

