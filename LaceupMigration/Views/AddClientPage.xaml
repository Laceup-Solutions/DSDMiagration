<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AddClientPage"
             Shell.TabBarIsVisible="False"
             Title="Add Customer">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <!-- Save Button at the top -->
            <Button Text="Save Customer"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveCommand}"
                    FontSize="16"
                    Padding="16,12"
                    Margin="0,0,0,20" />

            <!-- Address Fields Block -->
            <Entry Text="{Binding Name}"
                   Placeholder="Client Name *"
                   FontSize="16" />

            <Entry Text="{Binding Contact}"
                   Placeholder="Contact"
                   FontSize="16" />

            <Entry Text="{Binding Phone}"
                   Placeholder="Phone"
                   Keyboard="Telephone"
                   FontSize="16" />

            <Entry Text="{Binding Email}"
                   Placeholder="Email"
                   Keyboard="Email"
                   FontSize="16" />

            <Entry Text="{Binding Address1}"
                   Placeholder="Address 1"
                   FontSize="16" />

            <Entry Text="{Binding Address2}"
                   Placeholder="Address 2"
                   FontSize="16" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                <Entry Grid.Column="0"
                       Text="{Binding City}"
                       Placeholder="City"
                       FontSize="16" />
                <Entry Grid.Column="1"
                       Text="{Binding State}"
                       Placeholder="State"
                       FontSize="16" />
            </Grid>

            <Entry Text="{Binding Zip}"
                   Placeholder="Zip Code"
                   FontSize="16" />

            <!-- Checkboxes Block -->
            <HorizontalStackLayout Spacing="8" IsVisible="{Binding ShowCanChangePrices}">
                <CheckBox IsChecked="{Binding CanChangePrices}" />
                <Label Text="User Can Change Prices"
                       VerticalOptions="Center"
                       FontSize="14" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
                <CheckBox IsChecked="{Binding Taxable}" />
                <Label Text="Taxable"
                       VerticalOptions="Center"
                       FontSize="14" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="8">
                <CheckBox IsChecked="{Binding OneDoc}" />
                <Label Text="Allow One Doc"
                       VerticalOptions="Center"
                       FontSize="14" />
            </HorizontalStackLayout>

            <!-- Other Fields Block -->
            <Editor Text="{Binding Comment}"
                    Placeholder="Comments"
                    HeightRequest="100"
                    FontSize="16" />

            <Entry Text="{Binding License}"
                   Placeholder="License"
                   FontSize="16" />

            <Picker ItemsSource="{Binding PriceLevels}"
                    SelectedItem="{Binding SelectedPriceLevelItem}"
                    ItemDisplayBinding="{Binding Name}"
                    Title="Price Level"
                    FontSize="16" />

            <Picker ItemsSource="{Binding RetailPriceLevels}"
                    SelectedItem="{Binding SelectedRetailPriceLevelItem}"
                    ItemDisplayBinding="{Binding Name}"
                    Title="Retail Price Level"
                    FontSize="16" />

            <Button Text="{Binding SelectedTerms, StringFormat='Terms: {0}'}"
                    Command="{Binding SelectTermsCommand}"
                    HorizontalOptions="Fill"
                    IsVisible="{Binding ShowTerms}" />

            <!-- Add Bill To Address at the bottom -->
            <Button Text="Add Bill To Address"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding SelectBillToCommand}"
                    HorizontalOptions="Fill"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</local:LaceupContentPage>
