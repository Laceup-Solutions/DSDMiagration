<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" x:Class="LaceupMigration.Views.SelfService.SelfServiceTemplatePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels.SelfService"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="vm:SelfServiceTemplatePageViewModel"
             Title="Recently Ordered">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*" Padding="10">
        <Label Grid.Row="0" 
               Text="{Binding ClientName}" 
               FontSize="18" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>

        <!-- Order summary (Lines, Qty, Term) -->
        <Frame Grid.Row="1" Padding="12,8" Margin="0,0,0,10" BackgroundColor="{StaticResource Gray100}" BorderColor="Transparent" HasShadow="False">
            <Grid ColumnDefinitions="*,*,*">
                <Label Grid.Column="0" Text="{Binding LinesText}" FontSize="14"/>
                <Label Grid.Column="1" Text="{Binding QtyText}" FontSize="14"/>
                <Label Grid.Column="2" Text="{Binding TermText}" FontSize="14"/>
            </Grid>
        </Frame>

        <Label Grid.Row="2" Text="{Binding SortByText}" FontSize="14" TextColor="{StaticResource Primary}" Margin="0,0,0,8"/>

        <CollectionView Grid.Row="3" ItemsSource="{Binding TemplateItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Style="{StaticResource CollectionViewItemStyle}">
                        <Frame Padding="10" Margin="0,0,0,10" 
                               BackgroundColor="White"
                               BorderColor="LightBlue"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding ProductName}" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="{Binding LastOrderedText}" FontSize="14" TextColor="Gray"/>
                                    <Label Text="{Binding PriceText}" FontSize="14"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1" 
                                        Text="Add"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SelfServiceTemplatePageViewModel}}, Path=AddItemCommand}"
                                        CommandParameter="{Binding .}"
                                        IsEnabled="{Binding IsEnabled}"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Bottom tab bar: Recently Ordered, Catalog, Search, More -->
        <Border Grid.Row="4" StrokeThickness="0" BackgroundColor="{StaticResource Gray100}" Padding="0,8">
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="4">
                <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Center">
                    <Image Source="{mi:MaterialOutlined Icon=History, IconColor={StaticResource Primary}}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    <Label Text="Recently Ordered" FontSize="11" TextColor="{StaticResource Primary}" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToCatalogCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="{mi:MaterialOutlined Icon=MenuBook, IconColor=Gray}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    <Label Text="Catalog" FontSize="11" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="2" Spacing="4" HorizontalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToSearchCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="{mi:MaterialOutlined Icon=Search, IconColor=Gray}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    <Label Text="Search" FontSize="11" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="3" Spacing="4" HorizontalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToMoreCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="{mi:MaterialOutlined Icon=MoreVert, IconColor=Gray}" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center"/>
                    <Label Text="More" FontSize="11" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</local:LaceupContentPage>
