<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" x:Class="LaceupMigration.Views.SelfService.SelfServiceTemplatePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels.SelfService"
             x:DataType="vm:SelfServiceTemplatePageViewModel"
             Title="Recently Ordered">
    <Grid RowDefinitions="Auto,*" Padding="10">
        <Label Grid.Row="0" 
               Text="{Binding ClientName}" 
               FontSize="18" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>
        
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding TemplateItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Style="{StaticResource CollectionViewItemStyle}">
                        <Frame Padding="10" Margin="0,0,0,10" 
                               BackgroundColor="White"
                               BorderColor="LightBlue"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding ProductName}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding LastOrderedText}" FontSize="14" TextColor="Gray"/>
                                <Label Text="{Binding PriceText}" FontSize="14"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1" 
                                    Text="Add"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SelfServiceTemplatePageViewModel}}, Path=AddItemCommand}"
                                    CommandParameter="{Binding .}"
                                    IsEnabled="{Binding IsEnabled}"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

