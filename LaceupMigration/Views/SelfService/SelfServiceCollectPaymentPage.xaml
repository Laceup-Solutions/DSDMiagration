<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" x:Class="LaceupMigration.Views.SelfService.SelfServiceCollectPaymentPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels.SelfService"
             x:DataType="vm:SelfServiceCollectPaymentPageViewModel"
             Title="Collect Payment">
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10">
        <Label Grid.Row="0" 
               Text="{Binding ClientName}" 
               FontSize="18" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,10"/>
        
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="8" Margin="0,0,0,10">
            <SearchBar Grid.Column="0" 
                       Placeholder="Search payments..."
                       Text="{Binding SearchText}"
                       TextChanged="OnSearchTextChanged"/>
            <CheckBox Grid.Column="1" 
                      IsChecked="{Binding IsSelectAllChecked}"
                      CheckedChanged="CheckBox_CheckedChanged"
                      VerticalOptions="Center"/>
        </Grid>
        
        <Frame Grid.Row="2" 
               Padding="12" 
               Margin="0,0,0,10"
               BackgroundColor="{StaticResource Gray100}"
               HasShadow="False">
            <HorizontalStackLayout Spacing="12">
                <Label Text="{Binding TotalText}" 
                       FontSize="18" 
                       FontAttributes="Bold"/>
                <Button Text="Send" 
                        Command="{Binding SendCommand}"
                        HorizontalOptions="End"/>
                <Button Text="Pay Bills" 
                        Command="{Binding PayBillsCommand}"
                        HorizontalOptions="End"/>
            </HorizontalStackLayout>
        </Frame>
        
        <CollectionView Grid.Row="3" 
                        ItemsSource="{Binding Payments}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:PaymentItemViewModel">
                    <Frame Padding="12" 
                           Margin="0,4" 
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <CheckBox Grid.Column="0" 
                                      IsChecked="{Binding IsSelected}"
                                      VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="{Binding PaymentDateText}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding PaymentMethodText}" 
                                       FontSize="14" 
                                       TextColor="Gray"/>
                                <Label Text="{Binding AmountText}" 
                                       FontSize="14"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="2" 
                                    Text="Delete" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SelfServiceCollectPaymentPageViewModel}}, Path=DeletePaymentCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    WidthRequest="80"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

