<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.InvoiceDetailsPage"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="vm:InvoiceDetailsPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Invoice Details">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" Order="Primary" Priority="0" IconImageSource="{mi:MaterialOutlined Icon=Menu, IconColor=Black}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Label Text="{Binding ClientName}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}" />

                <Label Text="{Binding CompanyName}"
                       IsVisible="{Binding ShowCompanyName}"
                       TextColor="{StaticResource Gray600}" />

                <Label Text="{Binding InvoiceNumberText}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}" />

                <Label Text="{Binding DatesText}"
                       TextColor="{StaticResource Gray600}" />

                <Label Text="{Binding TotalText}"
                       IsVisible="{Binding ShowTotal}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray900}" />

                <Label Text="{Binding DiscountText}"
                       IsVisible="{Binding ShowDiscount}"
                       TextColor="{StaticResource colorLaceupGreen}"
                       FontAttributes="Bold" />

                <Label Text="{Binding SalesmanName}"
                       IsVisible="{Binding ShowSalesmanName}"
                       TextColor="{StaticResource Gray600}" />

                <Label Text="Items:"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}"
                       Margin="0,8,0,0" />

                <CollectionView ItemsSource="{Binding InvoiceDetails}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:InvoiceDetailItemViewModel">
                            <Frame Padding="12" Margin="0,0,0,8" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource Gray100}" InputTransparent="True">
                                <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto" InputTransparent="True">
                                    <Label Grid.Column="0" Grid.Row="0"
                                           Text="{Binding ProductName}"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}" />
                                    <Label Grid.Column="1" Grid.Row="0"
                                           Text="{Binding QuantityText}"
                                           TextColor="{StaticResource Gray600}"
                                           HorizontalOptions="End" />
                                    <Label Grid.Column="2" Grid.Row="0"
                                           Text="{Binding PriceText}"
                                           IsVisible="{Binding ShowPrice}"
                                           TextColor="{StaticResource Gray900}"
                                           FontAttributes="Bold"
                                           HorizontalOptions="End" />
                                    <Label Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                                           Text="{Binding Notes}"
                                           IsVisible="{Binding HasNotes}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           Margin="0,4,0,0" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="{Binding Comments}"
                       IsVisible="{Binding HasComments}"
                       TextColor="{StaticResource Gray600}"
                       Margin="0,8,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

