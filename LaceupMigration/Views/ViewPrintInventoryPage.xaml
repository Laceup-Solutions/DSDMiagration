<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.ViewPrintInventoryPage"
             Shell.TabBarIsVisible="False"
             Title="View/Print Inventory">
    <Grid RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8">
        <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="8" Margin="16,8">
            <Label Grid.Column="0"
                   Text="{Binding TotalQtyText}"
                   FontSize="16"
                   FontAttributes="Bold" />
            <Label Grid.Column="1"
                   Text="{Binding TotalAmountText}"
                   FontSize="16"
                   FontAttributes="Bold"
                   IsVisible="{Binding ShowAmount}" />
        </Grid>

        <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="16,0">
            <Button Text="Search"
                    Command="{Binding SearchCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Print"
                    Command="{Binding PrintCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding ShowPrintButton}" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Products}"
                        Margin="16,0,16,8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:InventoryProductViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8"
                           InputTransparent="True">
                        <VerticalStackLayout Spacing="4" InputTransparent="True">
                            <Label Text="{Binding ProductName}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding QtyText, StringFormat='Qty: {0}'}"
                                   FontSize="14"
                                   TextColor="#666666" />
                            <Label Text="{Binding Lots}"
                                   FontSize="13"
                                   TextColor="#666666"
                                   IsVisible="{Binding ShowLots}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

