<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.InvoicesPage"
             x:DataType="vm:InvoicesPageViewModel"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Title="Open Inv">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" Order="Primary" Priority="0" IconImageSource="{mi:MaterialOutlined Icon=Menu, IconColor=Black}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          Padding="16"
          RowSpacing="12">
        <Border Grid.Row="0"
                StrokeThickness="1"
                BackgroundColor="white"
                IsVisible="{Binding IsSearchVisible}"
                Padding="12,4"
                StrokeShape="RoundRectangle 12">
            <Grid ColumnDefinitions="*,Auto">
                <SearchBar Grid.Column="0"
                           Placeholder="{Binding SearchPlaceholder}"
                           BackgroundColor="White"
                           FontSize="14"
                           Text="{Binding SearchQuery}"
                           SearchButtonPressed="SearchBar_SearchButtonPressed" />
                <Button Grid.Column="1"
                        Text="{mi:MaterialOutlined Icon=Menu, IconColor=Black}"
                        FontSize="18"
                        BackgroundColor="Transparent"
                        Command="{Binding SearchMenuCommand}"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0"
                        VerticalOptions="Center" />
            </Grid>
        </Border>

        <Grid 
              ColumnDefinitions="auto,auto,auto,auto"
              ColumnSpacing="5"
              HeightRequest="40"
              Grid.Row="1"
              HorizontalOptions="Start"
              IsVisible="{Binding ShowButtonsLayout}">
           
            <Button Grid.Column="0" Command="{Binding SelectDateRangeCommand}" ImageSource="{mi:MaterialOutlined Icon=ArrowDropDown, IconColor=White}" Text="{Binding SelectedDateRange}"/>
            <Button Text="Payment"
                    Grid.Column="1"
                    Command="{Binding PaymentCommand}"
                    IsVisible="{Binding ShowPaymentButton}" />
            <Button Text="Print"
                    Grid.Column="2"
                    Command="{Binding PrintCommand}" />
            <Button Text="Send"
                    Grid.Column="3"
                    Command="{Binding SendCommand}" />
        </Grid>

        <Grid Grid.Row="2"
              ColumnDefinitions="*,Auto"
              IsVisible="{Binding ShowSelectAllLayout}">
            <HorizontalStackLayout Grid.Column="0"
                                   Spacing="8"
                                   VerticalOptions="Center">
                <CheckBox IsChecked="{Binding IsSelectAllChecked}"
                          CheckedChanged="CheckBox_CheckedChanged" />
                <Label Text="{Binding SelectAllText}"
                       TextColor="#1A1A1A"
                       FontAttributes="Bold"
                       FontSize="14"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectAllCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            <Label Grid.Column="1"
                   Text="{Binding TotalText}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="#1A1A1A"
                   HorizontalOptions="End"
                   IsVisible="{Binding ShowTotal}" />
        </Grid>

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding FlatInvoiceList}"
                        SelectionMode="None"
                        EmptyView="No invoices available.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:InvoiceGroupItemViewModel">
                    <Grid Style="{StaticResource CollectionViewItemStyle}">
                        <!-- Group Header -->
                        <Frame Padding="12"
                               Margin="0,8,0,4"
                               BackgroundColor="#F5F5F5"
                               HasShadow="False"
                               IsVisible="{Binding IsGroupHeader}">
                            <Label Text="{Binding ClientName}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                        </Frame>
                        
                        <!-- Invoice Item -->
                        <Frame Margin="0,4"
                               Padding="12"
                               HasShadow="False"
                               BorderColor="#E0E0E0"
                               CornerRadius="10"
                               IsVisible="{Binding IsGroupHeader, Converter={StaticResource InvertedBoolConverter}}">
                            <Grid ColumnDefinitions="Auto,*"
                                  RowDefinitions="Auto,Auto,Auto"
                                  ColumnSpacing="12">
                                <CheckBox Grid.Row="0"
                                          Grid.Column="0"
                                          IsChecked="{Binding InvoiceItem.IsSelected}"
                                          VerticalOptions="Center" />
                                <Grid Grid.Row="0"
                                      Grid.Column="1"
                                      ColumnDefinitions="*,Auto">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding InvoiceItem.ViewDetailsCommand}" />
                                    </Grid.GestureRecognizers>
                                    <VerticalStackLayout Grid.Column="0"
                                                         Spacing="4">
                                        <Label Text="{Binding InvoiceItem.InvoiceNumberText}"
                                               FontSize="16"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding InvoiceItem.DateText}"
                                               FontSize="13"
                                               TextColor="#666666" />
                                        <Grid ColumnDefinitions="*,*"
                                              IsVisible="{Binding InvoiceItem.ShowAmounts}">
                                            <Label Grid.Column="0"
                                                   Text="{Binding InvoiceItem.TotalText}"
                                                   FontSize="13" />
                                            <Label Grid.Column="1"
                                                   Text="{Binding InvoiceItem.OpenBalanceText}"
                                                   FontSize="13"
                                                   TextColor="{Binding InvoiceItem.OpenBalanceColor}"
                                                   HorizontalOptions="End" />
                                        </Grid>
                                        <Label Text="{Binding InvoiceItem.DiscountText}"
                                               FontSize="12"
                                               TextColor="#4CAF50"
                                               IsVisible="{Binding InvoiceItem.ShowDiscount}" />
                                        <Frame IsVisible="{Binding InvoiceItem.ShowGoalInfo}"
                                               Padding="8"
                                               BackgroundColor="#E3F2FD"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="4">
                                                <Label Text="{Binding InvoiceItem.GoalPaymentText}"
                                                       FontSize="12" />
                                                <Label Text="{Binding InvoiceItem.PendingDaysText}"
                                                       FontSize="12" />
                                            </VerticalStackLayout>
                                        </Frame>
                                    </VerticalStackLayout>
                                    <Button Grid.Column="1"
                                            Text="â†’"
                                            FontSize="18"
                                            BackgroundColor="Transparent"
                                            TextColor="#1976D2"
                                            Command="{Binding InvoiceItem.ViewDetailsCommand}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
            </CollectionView.ItemsLayout>
        </CollectionView>
    </Grid>
</ContentPage>
