<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.ClientImagesPage"
             x:DataType="vm:ClientImagesPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Client Images">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Label Text="{Binding ClientName}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}" />

                <Button Text="Take Photo"
                        Command="{Binding TakePhotoCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,8,0,0" />

                <Label Text="Images:"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}"
                       Margin="0,16,0,0"
                       IsVisible="{Binding ShowImages}" />

                <CollectionView ItemsSource="{Binding Images}"
                                SelectionMode="None"
                                IsVisible="{Binding ShowImages}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:ClientImageViewModel">
                            <Grid Padding="8" Margin="0,0,0,8" InputTransparent="True">
                                <Image Source="{Binding ImagePath}"
                                       Aspect="AspectFill"
                                       HeightRequest="200"
                                       WidthRequest="200" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="No images found."
                       IsVisible="{Binding ShowNoImages}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,20,0,20"
                       TextColor="{StaticResource Gray500}" />

                <Button Text="Done"
                        Command="{Binding DoneCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,16,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
