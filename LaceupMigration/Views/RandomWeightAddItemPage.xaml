<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.RandomWeightAddItemPage"
             x:DataType="vm:RandomWeightAddItemPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Add Item">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="12" Spacing="8">
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                    <Button Text="Product Details"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ViewProductDetailsCommand}"
                            FontSize="14"
                            HeightRequest="40"
                            CornerRadius="4"
                            Grid.Column="0" />
                    <Button Text="Add Item"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddToOrderCommand}"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="4"
                            Grid.Column="1">
                    </Button>
                </Grid>

                <Label Text="{Binding ProductName}"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"
                       TextColor="{StaticResource Gray900}"
                       LineBreakMode="WordWrap" />

                <Label Text="Random Weight"
                       FontSize="15"
                       TextColor="{StaticResource colorLaceupGreen}"
                       IsVisible="{Binding ShowRandomWeightLabel}"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,0,0,4" />

                <Label Text="{Binding AvgWeightText}"
                       FontSize="12"
                       TextColor="{StaticResource Gray600}"
                       IsVisible="{Binding ShowAvgWeight}"
                       HorizontalOptions="Center"
                       Margin="0,0,0,4" />

                <Frame Padding="10" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}" Margin="0,0,0,4">
                    <VerticalStackLayout Spacing="6">
                        <!-- SoldByWeight: Qty shows line count (disabled). Otherwise hidden; weight/quantity handled elsewhere. -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowQuantity}">
                            <Label Text="Qty:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding QuantityText}"
                                   Keyboard="Numeric"
                                   HorizontalOptions="Start"
                                   WidthRequest="100"
                                   FontSize="16"
                                   BackgroundColor="Transparent"
                                   IsEnabled="{Binding IsQuantityEnabled}"
                                   Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowWeight}">
                            <Label Text="Weight:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding WeightText}"
                                   Keyboard="Numeric"
                                   FontSize="16"
                                   WidthRequest="100"
                                   HorizontalOptions="Start"
                                   BackgroundColor="Transparent"
                                   Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" IsVisible="{Binding ShowPrice}">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="Price:"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray900}"
                                       VerticalOptions="Center"
                                       Grid.Column="0" />
                                <Entry Text="{Binding PriceText}"
                                       Keyboard="Numeric"
                                       FontSize="16"
                                       WidthRequest="100"
                                       HorizontalOptions="Start"
                                       BackgroundColor="Transparent"
                                       IsReadOnly="{Binding CanEditPrice, Converter={StaticResource InvertedBoolConverter}}"
                                       Grid.Column="1" />
                            </Grid>
                            <HorizontalStackLayout Grid.Column="1" Spacing="8" IsVisible="{Binding ShowPrice}" Margin="0,4,0,0">
                                <CheckBox IsChecked="{Binding IsFreeItem}" />
                                <Label Text="Free Item"
                                       VerticalOptions="Center"
                                       FontSize="16"
                                       TextColor="{StaticResource Gray900}" />
                            </HorizontalStackLayout>
                        </Grid>

                        <VerticalStackLayout Spacing="6" IsVisible="{Binding ShowDiscountPerLine}" Margin="0,4,0,0">
                            <Label Text="Discount:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}" />
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                <RadioButton Content="Percentage"
                                             IsChecked="{Binding IsDiscountPercentage}"
                                             GroupName="DiscountType"
                                             FontSize="16"
                                             VerticalOptions="Center"
                                             Grid.Column="0" />
                                <HorizontalStackLayout Spacing="6" VerticalOptions="Center" Grid.Column="1">
                                    <Entry Text="{Binding DiscountPercentText}"
                                           Keyboard="Numeric"
                                           FontSize="16"
                                           WidthRequest="60"
                                           IsEnabled="{Binding IsDiscountPercentage}"
                                           Placeholder="0" />
                                    <Label Text="% ="
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding IsDiscountPercentage}" />
                                    <Label Text="{Binding DiscountPercentEqualsText}"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding IsDiscountPercentage}" />
                                </HorizontalStackLayout>
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                <RadioButton Content="Amount"
                                             IsChecked="{Binding IsDiscountAmount}"
                                             GroupName="DiscountType"
                                             FontSize="16"
                                             VerticalOptions="Center"
                                             Grid.Column="0" />
                                <Entry Text="{Binding DiscountAmountText}"
                                       Keyboard="Numeric"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       IsEnabled="{Binding IsDiscountAmount}"
                                       Placeholder="0.00"
                                       Grid.Column="1" />
                            </Grid>
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Label Text="Total:"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Label Text="{Binding TotalText}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"
                                   Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Label Text="OH:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Label Text="{Binding OnHandText}"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowUom}">
                            <Label Text="UoM:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Picker ItemsSource="{Binding UnitOfMeasures}"
                                    SelectedItem="{Binding SelectedUom}"
                                    ItemDisplayBinding="{Binding Name}"
                                    FontSize="16"
                                    BackgroundColor="Transparent"
                                    Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowLot}">
                            <Label Text="Lot:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding LotText}"
                                   FontSize="16"
                                   BackgroundColor="Transparent"
                                   Placeholder="Enter lot number"
                                   Grid.Column="1" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowComments}">
                            <Label Text="Comments:"
                                   FontSize="16"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Editor Text="{Binding CommentsText}"
                                    FontSize="16"
                                   BackgroundColor="Transparent"
                                   Placeholder="Enter comments"
                                   Grid.Column="1" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Lines list: Add / Remove / Clear and CollectionView (when SoldByWeight) -->
                <VerticalStackLayout IsVisible="{Binding ShowLinesSection}" Spacing="8" Margin="0,8,0,0">
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <Button Text="Add lines"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding AddLinesCommand}"
                                FontSize="14"
                                Grid.Column="0" />
                        <Button Text="Remove lines"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding RemoveLinesCommand}"
                                FontSize="14"
                                Grid.Column="1" />
                        <Button Text="Clear lines"
                                Style="{StaticResource DeleteButton}"
                                Command="{Binding ClearLinesCommand}"
                                FontSize="14"
                                Grid.Column="2" />
                    </Grid>
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                        <Label Text="Weight total:"
                               FontSize="16"
                               TextColor="{StaticResource Gray900}"
                               VerticalOptions="Center"
                               Grid.Column="0" />
                        <Label Text="{Binding WeightTotalText}"
                               FontSize="16"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               Grid.Column="1" />
                    </Grid>
                    <CollectionView ItemsSource="{Binding Lines}"
                                    SelectionMode="None"
                                    Margin="0,4,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:RandomWeightLineViewModel">
                                <Border Padding="8" Margin="0,4" BackgroundColor="{StaticResource White}" StrokeShape="RoundRectangle 8">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*,Auto" RowSpacing="4" ColumnSpacing="8">
                                        <CheckBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                                  IsChecked="{Binding Selected}"
                                                  VerticalOptions="Center" />
                                        <Label Grid.Row="0" Grid.Column="1"
                                               Text="{Binding CaseNumber, StringFormat='Case #: {0}'}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                        <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="2"
                                                Text="{Binding WeightText}"
                                                VerticalOptions="Center"
                                                Command="{Binding EditWeightCommand}"
                                                FontSize="16"
                                                FontAttributes="Bold"
                                                BackgroundColor="{StaticResource colorLaceupGreen}"
                                                TextColor="White">
                                            <Button.Triggers>
                                                <DataTrigger TargetType="Button" Binding="{Binding IsWeightZero}" Value="True">
                                                    <Setter Property="Style" Value="{StaticResource DeleteButton}" />
                                                </DataTrigger>
                                            </Button.Triggers>
                                        </Button>
                                        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                               Text="{Binding LineTotalText, StringFormat='Total: {0}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                               Text="{Binding LotText}"
                                               FontSize="12"
                                               IsVisible="{Binding LotText, Converter={StaticResource IsStringNotEmptyConverter}}"
                                               TextColor="{StaticResource Gray600}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</local:LaceupContentPage>
