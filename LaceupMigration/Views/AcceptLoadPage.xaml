<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AcceptLoadPage"
             Shell.TabBarIsVisible="False"
             Title="Accept Load">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="8">
        <Label Grid.Row="0"
               Text="{Binding TotalLoadText}"
               FontSize="16"
               FontAttributes="Bold"
               Margin="8"
               HorizontalOptions="Center" />

        <HorizontalStackLayout Grid.Row="1"
                               Spacing="8"
                               Margin="8,0">
            <Button Text="View/Print"
                    Command="{Binding ViewPrintCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Activate"
                    Command="{Binding ActivateCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Search"
                    Command="{Binding SearchCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Done"
                    Command="{Binding DoneCommand}"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding InventoryLines}"
                        Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:InventoryLineViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource Gray100}"
                           HasShadow="False"
                           CornerRadius="8"
                           InputTransparent="True">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" InputTransparent="True">
                            <VerticalStackLayout Grid.Column="0" Spacing="4" InputTransparent="True">
                                <Label Text="{Binding ProductName}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding QuantityText}"
                                       FontSize="14"
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                            <Entry Grid.Column="1"
                                   Text="{Binding Real, StringFormat='{0:F2}'}"
                                   WidthRequest="100"
                                   Keyboard="Numeric"
                                   IsReadOnly="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ReadOnly}"
                                   TextChanged="OnQuantityChanged"
                                   x:Name="QtyEntry" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
