<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AddItemPage"
             x:DataType="vm:AddItemPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Add Item">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="12" Spacing="8">
                <!-- Product Description (Full line with UPC) -->
                <Frame Padding="10" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}" Margin="0,0,0,4">
                    <Label Text="{Binding ProductName}"
                           FontSize="14"
                           TextColor="{StaticResource Gray900}"
                           LineBreakMode="WordWrap" />
                </Frame>

                <!-- Compact Input Fields Grid -->
                <Frame Padding="10" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}" Margin="0,0,0,4">
                    <VerticalStackLayout Spacing="6">
                        <!-- Qty Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowQuantity}">
                            <Label Text="Qty:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding QuantityText}"
                                   Keyboard="Numeric"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- Weight Row (alternative to Qty) -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowWeight}">
                            <Label Text="Weight:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding WeightText}"
                                   Keyboard="Numeric"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- Price Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowPrice}">
                            <Label Text="Price:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding PriceText}"
                                   Keyboard="Numeric"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   IsReadOnly="{Binding CanEditPrice, Converter={StaticResource InvertedBoolConverter}}"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- Discount per line (inline, matches Xamarin AddItemActivity) -->
                        <VerticalStackLayout x:Name="DiscountSection" Spacing="6" IsVisible="{Binding ShowDiscountPerLine}" Margin="0,4,0,0">
                            <Label Text="Discount:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}" />
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                <RadioButton x:Name="DiscountPercentageRadio"
                                             Content="Percentage"
                                             IsChecked="{Binding IsDiscountPercentage}"
                                             GroupName="DiscountType"
                                             FontSize="14"
                                             VerticalOptions="Center"
                                             Grid.Column="0" />
                                <HorizontalStackLayout Spacing="6" VerticalOptions="Center" Grid.Column="1">
                                    <Entry x:Name="DiscountPercentEntry"
                                           Text="{Binding DiscountPercentText}"
                                           Keyboard="Numeric"
                                           FontSize="14"
                                           WidthRequest="60"
                                           IsEnabled="{Binding IsDiscountPercentage}"
                                           Placeholder="0" />
                                    <Label Text="% ="
                                           FontSize="14"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding IsDiscountPercentage}" />
                                    <Label Text="{Binding DiscountPercentEqualsText}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray900}"
                                           VerticalOptions="Center"
                                           IsVisible="{Binding IsDiscountPercentage}" />
                                </HorizontalStackLayout>
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                <RadioButton x:Name="DiscountAmountRadio"
                                             Content="Amount"
                                             IsChecked="{Binding IsDiscountAmount}"
                                             GroupName="DiscountType"
                                             FontSize="14"
                                             VerticalOptions="Center"
                                             Grid.Column="0" />
                                <Entry x:Name="DiscountAmountEntry"
                                       Text="{Binding DiscountAmountText}"
                                       Keyboard="Numeric"
                                       FontSize="14"
                                       BackgroundColor="Transparent"
                                       IsEnabled="{Binding IsDiscountAmount}"
                                       Placeholder="0.00"
                                       Grid.Column="1" />
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Total Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Label Text="Total:"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Label Text="{Binding TotalText}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryDark}"
                                   VerticalOptions="Center"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- On Hand Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                            <Label Text="OH:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Label Text="{Binding OnHandText}"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- Unit of Measure Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowUom}">
                            <Label Text="UoM:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Picker ItemsSource="{Binding UnitOfMeasures}"
                                    SelectedItem="{Binding SelectedUom}"
                                    ItemDisplayBinding="{Binding Name}"
                                    FontSize="14"
                                    BackgroundColor="Transparent"
                                    Grid.Column="1" />
                        </Grid>

                        <!-- Lot Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowLot}">
                            <Label Text="Lot:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Center"
                                   Grid.Column="0" />
                            <Entry Text="{Binding LotText}"
                                   FontSize="14"
                                   BackgroundColor="Transparent"
                                   Placeholder="Enter lot number"
                                   Grid.Column="1" />
                        </Grid>

                        <!-- Comments Row -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" IsVisible="{Binding ShowComments}">
                            <Label Text="Comments:"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}"
                                   VerticalOptions="Start"
                                   Grid.Column="0" />
                            <Editor Text="{Binding CommentsText}"
                                    FontSize="14"
                                    BackgroundColor="Transparent"
                                    Placeholder="Enter comments"
                                    HeightRequest="60"
                                    Grid.Column="1" />
                        </Grid>

                        <!-- Free Item Checkbox -->
                        <HorizontalStackLayout Spacing="8" IsVisible="{Binding ShowPrice}" Margin="0,4,0,0">
                            <CheckBox IsChecked="{Binding IsFreeItem}" />
                            <Label Text="Free Item"
                                   VerticalOptions="Center"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray900}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="8" Margin="0,4,0,0">
                    <Button Text="Product Details"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ViewProductDetailsCommand}"
                            FontSize="14"
                            HeightRequest="40"
                            CornerRadius="4"
                            Grid.Column="0" />
                    <Button Text="Add Item"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding AddToOrderCommand}"
                            FontSize="14"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="4"
                            Grid.Column="1" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</local:LaceupContentPage>

