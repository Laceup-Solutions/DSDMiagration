<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             xmlns:converters="clr-namespace:LaceupMigration.Converters"
             x:Class="LaceupMigration.ClientsPage"
             x:DataType="vm:ClientsPageViewModel"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Title="Customers">
    <ContentPage.ToolbarItems>
            <ToolbarItem Text="Menu" Order="Primary" Priority="0" IconImageSource="{mi:MaterialOutlined Icon=Menu, IconColor=Black}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="BadgeBorder">
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
            <Setter Property="MinimumHeightRequest" Value="20" />
        </Style>

        <DataTemplate x:Key="ClientItemTemplate" x:DataType="vm:ClientListItemViewModel" >
            <Grid RowDefinitions="*,Auto"
                  ColumnDefinitions="{Binding HasLeftContent, Converter={StaticResource HasLeftContentToColumnDefinitionsConverter}}"
                  Padding="10,8,10,4"
                  ColumnSpacing="5"
                  MinimumHeightRequest="60">
                <!-- Stop Number (only shown when showing routes, not "All") -->
                <Border Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="{Binding StopBadgeBackground}"
                        StrokeThickness="0"
                        Padding="6,2"
                        MinimumWidthRequest="24"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        IsVisible="{Binding ShowStop}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Label Text="{Binding StopText}"
                           FontSize="11"
                           FontAttributes="Bold"
                           TextColor="{Binding StopBadgeTextColor}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>

                <!-- Icon (only shown when showing routes, not "All") -->
                <Image Grid.Row="0"
                       Grid.Column="1"
                       Source="{Binding IconImageSource}"
                       WidthRequest="24"
                       HeightRequest="24"
                       VerticalOptions="Center"
                       IsVisible="{Binding ShowIcon}" />

                <!-- Client Name and Address -->
                <Grid Grid.Row="0"
                      Grid.Column="{Binding HasLeftContent, Converter={StaticResource HasLeftContentToContentColumnConverter}}"
                      RowDefinitions="Auto,Auto"
                      RowSpacing="4"
                      VerticalOptions="FillAndExpand"
                      Margin="0,0,0,12">
                    <Label Grid.Row="0"
                           Text="{Binding Name}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{Binding NameColor}"
                           VerticalOptions="Start"
                           LineBreakMode="WordWrap" />

                    <Label Grid.Row="1"
                           Text="{Binding Address}"
                           FontSize="12"
                           TextColor="{Binding AddressColor}"
                           IsVisible="{Binding ShowAddress}"
                           VerticalOptions="Start"
                           HorizontalOptions="Fill"
                           LineBreakMode="WordWrap"
                           Margin="0,2,0,6" />
                </Grid>

                <!-- Balance -->
                <Label Grid.Row="0"
                       Grid.Column="{Binding HasLeftContent, Converter={StaticResource HasLeftContentToBalanceColumnConverter}}"
                       Text="{Binding Balance}"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="{Binding NameColor}"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       LineBreakMode="NoWrap" />

                <BoxView Grid.Row="1"
                         Grid.ColumnSpan="{Binding HasLeftContent, Converter={StaticResource HasLeftContentToColumnSpanConverter}}"
                         HeightRequest="1"
                         Margin="0,0,0,0"
                         Color="#E0E0E0"
                         VerticalOptions="Start"
                         HorizontalOptions="Fill" />
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*"
          ColumnDefinitions="*"
          RowSpacing="0">

        <Border Grid.Row="1"
                Margin="5"
                x:Name="SearchBorder"
                StrokeThickness="1"
                BackgroundColor="white"
                IsVisible="{Binding IsSearchVisible}"
                Padding="12,2"
                StrokeShape="RoundRectangle 12">
            <SearchBar Placeholder="Search customers"
                       FontSize="14"
                       HeightRequest="36"
                       BackgroundColor="White"
                       Text="{Binding SearchQuery}"
                       SearchButtonPressed="SearchBar_SearchButtonPressed" />
        </Border>


        <HorizontalStackLayout Grid.Row="0"
                               x:Name="ButtonsLayout"
                               Spacing="6"
                               Margin="5"
                               HorizontalOptions="Center"
                               IsVisible="{Binding ShowButtonsLayout}">
            <Button Text="View Map Route"
                    Style="{StaticResource SmallButton}"
                    Command="{Binding OpenMapRouteCommand}"
                    IsVisible="{Binding ShowMapRouteButton}" />

            <Button Text="{Binding ViewButtonText}"
                    Style="{StaticResource SmallButton}"
                    Command="{Binding ToggleDisplayModeCommand}"
                    IsVisible="{Binding ShowViewButton}" />

            <Button Text="{Binding SelectDayButtonText}"
                    Style="{StaticResource SmallButton}"
                    Command="{Binding SelectDateCommand}"
                    IsVisible="{Binding ShowSelectDayButton}" />

            <Button Text="{Binding EditButtonText}"
                    Style="{StaticResource SmallButton}"
                    Command="{Binding ToggleEditCommand}"
                    IsVisible="{Binding ShowEditButton}" />
        </HorizontalStackLayout>

        <Label Grid.Row="2"
               Text="{Binding InfoMessage}"
               FontSize="13"
               TextColor="#666666"
               IsVisible="{Binding HasInfoMessage}"
               HorizontalOptions="Center" />

        <CollectionView x:Name="FlatCollectionView"
                        Grid.Row="3"
                        ItemsSource="{Binding Clients}"
                        ItemTemplate="{StaticResource ClientItemTemplate}"
                        SelectionMode="Single"
                        SelectionChanged="OnClientSelectionChanged"
                        IsVisible="{Binding ShowFlatList}"
                        EmptyView="No customers available."
                        ItemSizingStrategy="MeasureFirstItem">
        </CollectionView>

        <CollectionView x:Name="GroupedCollectionView"
                        Grid.Row="3"
                        ItemsSource="{Binding ClientGroups}"
                        SelectionMode="None"
                        IsVisible="{Binding ShowGroupedList}"
                        EmptyView="No customers available.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:ClientGroupViewModel">
                    <Grid Style="{StaticResource CollectionViewItemStyle}">
                        <VerticalStackLayout Spacing="4">
                        <Grid ColumnDefinitions="*,Auto"
                              Padding="8"
                              BackgroundColor="#E0E0E0">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ToggleExpansionCommand}" />
                            </Grid.GestureRecognizers>
                            <Label Text="{Binding DisplayName}"
                                   FontAttributes="Bold"
                                   FontSize="15" />
                            <Label Grid.Column="1"
                                   Text="{Binding Clients.Count}"
                                   FontSize="13"
                                   TextColor="#555555" />
                        </Grid>

                        <CollectionView ItemsSource="{Binding Clients}"
                                        ItemTemplate="{StaticResource ClientItemTemplate}"
                                        SelectionMode="Single"
                                        SelectionChanged="OnGroupedClientSelectionChanged"
                                        IsVisible="{Binding IsExpanded}"
                                        ItemSizingStrategy="MeasureFirstItem">
                        </CollectionView>
                    </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

