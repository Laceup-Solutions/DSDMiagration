<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="LaceupMigration.Views.PaymentSetValuesPage"
             x:DataType="vm:PaymentSetValuesPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Collect Payment">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="0">
            <ScrollView Orientation="Horizontal">
                <Grid ColumnDefinitions="2*,*,2*,*,*" 
                      ColumnSpacing="5" 
                      Padding="5,0,5,0"
                      HeightRequest="50">
                    <Button Grid.Column="0"
                            Text="Save &amp; Close" 
                            Command="{Binding SaveAndCloseCommand}" 
                            IsEnabled="{Binding CanSavePayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="5,0"
                            FontSize="14" />
                    <Button Grid.Column="1"
                            Text="Print" 
                            Command="{Binding PrintPaymentCommand}" 
                            IsEnabled="{Binding CanPrintPayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="12,0"
                            FontSize="14" />
                    <Button Grid.Column="2"
                            Text="Send By Email" 
                            Command="{Binding SendByEmailCommand}" 
                            IsEnabled="{Binding CanSendByEmail}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="8,0"
                            FontSize="14" />
                    <Button Grid.Column="3"
                            Text="Add" 
                            Command="{Binding AddPaymentCommand}" 
                            IsEnabled="{Binding CanAddPayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="12,0"
                            FontSize="14" />
                    <Button Grid.Column="4"
                            Text="Delete" 
                            Command="{Binding DeleteEntirePaymentCommand}" 
                            IsEnabled="{Binding CanDeletePayment}"
                            Style="{StaticResource DeleteButton}"
                            Padding="8,0"
                            FontSize="14" />
                </Grid>
            </ScrollView>

            
            <ScrollView>
                <VerticalStackLayout Padding="10" Spacing="8">
                    <!-- Summary Section with Blue Border (matching Xamarin) -->
                    <Border StrokeThickness="1"
                            Stroke="{StaticResource PrimaryDark}"
                            BackgroundColor="White"
                            Padding="10"
                            Margin="0,0,0,5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="3" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <!-- Client Name -->
                            <Label Text="{Binding ClientName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryDark}" />

                            <!-- Invoice/Order Numbers (matching Xamarin horizontal layout) -->
                            <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="5">
                                <Label Grid.Column="0" 
                                       Text="Invoice #:" 
                                       FontSize="14" 
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1" 
                                       Text="{Binding DocNumbers}"
                                       FontSize="14" />
                                <Label Grid.Column="2" 
                                       Text="Credit:" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       IsVisible="{Binding ShowCreditsDocNumbers}"
                                       Margin="5,0,0,0" />
                                <Label Grid.Column="3" 
                                       Text="{Binding CreditsDocNumbers}"
                                       FontSize="14"
                                       TextColor="Red"
                                       IsVisible="{Binding ShowCreditsDocNumbers}" />
                            </Grid>

                            <!-- Amount Information (matching Xamarin horizontal layout: Owed, Credit, Open) -->
                            <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" ColumnSpacing="5">
                                <Label Grid.Column="0" Text="Owed:" FontSize="14" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding AmountLabel}" FontSize="14" />
                                
                                <Label Grid.Column="2" 
                                       Text="Credit:" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       IsVisible="{Binding ShowCreditAmount}"
                                       Margin="5,0,0,0" />
                                <Label Grid.Column="3" 
                                       Text="{Binding CreditAmountLabel}" 
                                       FontSize="14"
                                       IsVisible="{Binding ShowCreditAmount}" />
                                
                                <Label Grid.Column="4" Text="Open:" FontSize="14" FontAttributes="Bold" Margin="5,0,0,0" />
                                <Label Grid.Column="5" 
                                       Text="{Binding OpenLabel}" 
                                       FontSize="14"
                                       TextColor="{Binding OpenLabelColor}" />
                            </Grid>

                            <!-- Discount (separate line if visible, matching Xamarin) -->
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" 
                                  IsVisible="{Binding ShowDiscount}">
                                <Label Grid.Column="0" Text="Discount:" FontSize="14" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="{Binding DiscountTotal}" FontSize="14" />
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                <!-- Payment Components (matching Xamarin bordered container with blue border) -->
                <Label Text="Payment Methods:" FontSize="16" FontAttributes="Bold" Margin="0,5,0,5" />


                    <CollectionView ItemsSource="{Binding PaymentComponents}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:PaymentComponentViewModel">
                                <Frame Padding="10"
                                       IsVisible="{Binding IsVisible}" 
                                       Margin="0,2,0,10" 
                                       HasShadow="False" 
                                       BackgroundColor="{StaticResource White}"
                                       x:Name="PaymentComponentFrame">
                                    <VerticalStackLayout Spacing="10">
                                        <!-- Divider with "-Select Payment Method-" text (matching Xamarin) -->
                                        <Grid ColumnDefinitions="*,Auto,*" Margin="5,15,5,0">
                                            <BoxView Grid.Column="0" 
                                                    HeightRequest="1" 
                                                    Color="LightGray" 
                                                    VerticalOptions="Center" />
                                            <Label Grid.Column="1" 
                                                   Text="-Select Payment Method-" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   TextColor="LightGray"
                                                   Margin="5,0" />
                                            <BoxView Grid.Column="2" 
                                                    HeightRequest="1" 
                                                    Color="LightGray" 
                                                    VerticalOptions="Center" />
                                        </Grid>

                                        <!-- Payment Method Row -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Label Grid.Column="0" 
                                                   Text="Payment Method:" 
                                                   FontSize="14" 
                                                   VerticalOptions="Center" />
                                            <Button Grid.Column="1"
                                                    Text="{Binding PaymentMethodText}" 
                                                    Command="{Binding SelectPaymentMethodCommand}"
                                                    IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                                    BackgroundColor="#F5F5F5"
                                                    TextColor="Gray"
                                                    FontSize="14"
                                                    HeightRequest="50"
                                                    CornerRadius="5" />
                                        </Grid>

                                        <!-- Amount, Comments, Add Image Row (matching Xamarin 30%, 40%, 30% weights) -->
                                        <Grid ColumnDefinitions="0.3*,0.4*,0.3*" ColumnSpacing="5">
                                            <!-- Amount -->
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Amount:" FontSize="14" />
                                                <Border StrokeThickness="0"
                                                        BackgroundColor="#F5F5F5"
                                                        Padding="10,0"
                                                        HeightRequest="40">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="5" />
                                                    </Border.StrokeShape>
                                                    <Entry Text="{Binding AmountText, Mode=TwoWay}" 
                                                           IsReadOnly="{Binding IsReadOnly}"
                                                           Keyboard="Numeric"
                                                           BackgroundColor="Transparent"
                                                           TextColor="Gray"
                                                           FontSize="14"
                                                           Placeholder="0.00"
                                                           Unfocused="AmountEntry_Unfocused" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- Comments -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Comments:" FontSize="14" />
                                                <Border StrokeThickness="0"
                                                        BackgroundColor="#F5F5F5"
                                                        Padding="10,0"
                                                        HeightRequest="40">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="5" />
                                                    </Border.StrokeShape>
                                                    <Entry Text="{Binding Comments, Mode=TwoWay}" 
                                                           IsReadOnly="{Binding IsReadOnly}"
                                                           BackgroundColor="Transparent"
                                                           TextColor="Gray"
                                                           FontSize="14"
                                                           Placeholder="Enter comments"
                                                           HorizontalOptions="Fill" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <!-- Add Image -->
                                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                                <Label Text="Add Image:" FontSize="14" />
                                                <Border StrokeThickness="1"
                                                        Stroke="LightGray"
                                                        BackgroundColor="#F5F5F5"
                                                        Padding="0"
                                                        HeightRequest="35"
                                                        WidthRequest="60">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="5" />
                                                    </Border.StrokeShape>
                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnImageTapped" />
                                                    </Border.GestureRecognizers>
                                                    <Grid>
                                                        <Image Source="{Binding ImagePath}"
                                                               IsVisible="{Binding HasImage}"
                                                               Aspect="AspectFill"
                                                               HeightRequest="25"
                                                               WidthRequest="50"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center" />
                                                        <Image Source="{mi:MaterialOutlined Icon=AddPhotoAlternate, IconColor=Gray}"
                                                               IsVisible="{Binding HasImage, Converter={StaticResource InvertedBoolConverter}}"
                                                               Aspect="AspectFit"
                                                               HeightRequest="24"
                                                               WidthRequest="24"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center" />
                                                    </Grid>
                                                </Border>
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Ref Number and Posted Date Row (matching Xamarin 60%, 40% weights) -->
                                        <Grid ColumnDefinitions="0.6*,0.4*" 
                                              ColumnSpacing="5"
                                              IsVisible="{Binding ShowRef}">
                                            <!-- Ref Number -->
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Ref Number:" FontSize="14" />
                                                <Button Text="{Binding Ref}" 
                                                        Clicked="EditPayment_Clicked"
                                                        IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                                        BackgroundColor="#F5F5F5"
                                                        TextColor="Gray"
                                                        FontSize="14"
                                                        HeightRequest="40"
                                                        CornerRadius="5" />
                                            </VerticalStackLayout>

                                            <!-- Posted Date -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="2" IsVisible="{Binding ShowPostedDate}">
                                                <Label Text="Posted Date:" FontSize="14" />
                                                <Button Text="{Binding PostedDate, StringFormat='{0:d}'}" 
                                                        Clicked="EditPayment_Clicked"
                                                        IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                                        BackgroundColor="#F5F5F5"
                                                        TextColor="Gray"
                                                        FontSize="14"
                                                        HeightRequest="40"
                                                        CornerRadius="5" />
                                            </VerticalStackLayout>
                                        </Grid>

                                        <!-- Bank Layout (if visible) -->
                                        <Grid ColumnDefinitions="Auto,*" 
                                              ColumnSpacing="5"
                                              IsVisible="{Binding ShowBank}">
                                            <Label Grid.Column="0" 
                                                   Text="Bank:" 
                                                   FontSize="14" 
                                                   VerticalOptions="Center" />
                                            <Button Grid.Column="1"
                                                    Text="{Binding BankName}" 
                                                    Clicked="EditPayment_Clicked"
                                                    IsEnabled="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                                    BackgroundColor="#F5F5F5"
                                                    TextColor="Gray"
                                                    FontSize="14"
                                                    HeightRequest="40"
                                                    CornerRadius="5" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </VerticalStackLayout>
    </ContentPage.Content>
</local:LaceupContentPage>

