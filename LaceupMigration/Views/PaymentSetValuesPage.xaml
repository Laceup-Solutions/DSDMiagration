<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="LaceupMigration.Views.PaymentSetValuesPage"
             x:DataType="vm:PaymentSetValuesPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Collect Payment">
    <ContentPage.Content>
        <Grid RowDefinitions="auto,*">
            <ScrollView Orientation="Horizontal" Grid.Row="0">
                <Grid ColumnDefinitions="2*,*,2*,*,*" 
                      ColumnSpacing="5" 
                      Padding="5,0,5,0"
                      HeightRequest="50">
                    <Button Grid.Column="0"
                            Text="Save &amp; Close" 
                            Command="{Binding SaveAndCloseCommand}" 
                            IsEnabled="{Binding CanSavePayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="5,0"
                            FontSize="14" />
                    <Button Grid.Column="1"
                            Text="Print" 
                            Command="{Binding PrintPaymentCommand}" 
                            IsEnabled="{Binding CanPrintPayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="12,0"
                            FontSize="14" />
                    <Button Grid.Column="2"
                            Text="Send By Email" 
                            Command="{Binding SendByEmailCommand}" 
                            IsEnabled="True"
                            Style="{StaticResource PrimaryButton}"
                            Padding="8,0"
                            FontSize="14" />
                    <Button Grid.Column="3"
                            Text="Add" 
                            Command="{Binding AddPaymentCommand}" 
                            IsEnabled="{Binding CanAddPayment}"
                            Style="{StaticResource PrimaryButton}"
                            Padding="12,0"
                            FontSize="14" />
                    <Button x:Name="DeleteButton"
                            Grid.Column="4"
                            Text="Delete" 
                            Command="{Binding DeleteEntirePaymentCommand}"
                            IsEnabled="{Binding CanDeletePayment}"
                            Style="{StaticResource DeleteButton}"
                            Padding="8,0"
                            FontSize="14" />
                </Grid>
            </ScrollView>
            
                <CollectionView x:Name="PaymentComponentsList"
                                Grid.Row="1"
                                ItemsSource="{Binding PaymentComponents}"
                                SelectionMode="None"
                                VerticalScrollBarVisibility="Always">
                    <CollectionView.Header>
                        <VerticalStackLayout Padding="10" Spacing="8">
                            <!-- Summary Section with Blue Border -->
                            <Border StrokeThickness="1"
                                    Stroke="{StaticResource PrimaryDark}"
                                    BackgroundColor="White"
                                    Padding="10"
                                    Margin="0,0,0,5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="3" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding ClientName}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryDark}" />
                                    <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="5">
                                        <Label Grid.Column="0" Text="Invoice #:" FontSize="14" FontAttributes="Bold" />
                                        <Label Grid.Column="1" Text="{Binding DocNumbers}" FontSize="14" />
                                        <Label Grid.Column="2" Text="Credit:" FontSize="14" FontAttributes="Bold"
                                               IsVisible="{Binding ShowCreditsDocNumbers}" Margin="5,0,0,0" />
                                        <Label Grid.Column="3" Text="{Binding CreditsDocNumbers}" FontSize="14"
                                               TextColor="Red" IsVisible="{Binding ShowCreditsDocNumbers}" />
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" ColumnSpacing="5">
                                        <Label Grid.Column="0" Text="Owed:" FontSize="14" FontAttributes="Bold" />
                                        <Label Grid.Column="1" Text="{Binding AmountLabel}" FontSize="14" />
                                        <Label Grid.Column="2" Text="Credit:" FontSize="14" FontAttributes="Bold"
                                               IsVisible="{Binding ShowCreditAmount}" Margin="5,0,0,0" />
                                        <Label Grid.Column="3" Text="{Binding CreditAmountLabel}" FontSize="14"
                                               IsVisible="{Binding ShowCreditAmount}" />
                                        <Label Grid.Column="4" Text="Open:" FontSize="14" FontAttributes="Bold" Margin="5,0,0,0" />
                                        <Label Grid.Column="5" Text="{Binding OpenLabel}" FontSize="14"
                                               TextColor="{Binding OpenLabelColor}" />
                                    </Grid>
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5" IsVisible="{Binding ShowDiscount}">
                                        <Label Grid.Column="0" Text="Discount:" FontSize="14" FontAttributes="Bold" />
                                        <Label Grid.Column="1" Text="{Binding DiscountTotal}" FontSize="14" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                            <Label Text="Payment Methods:" FontSize="16" FontAttributes="Bold" Margin="0,5,0,5" />
                        </VerticalStackLayout>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:PaymentComponentViewModel">
                                <Frame Padding="10" 
                                       Margin="0,2,0,10" 
                                       HasShadow="False" 
                                       BackgroundColor="{StaticResource White}">
                                    <VerticalStackLayout Spacing="10">
                                        <!-- Divider with "-Select Payment Method-" text (matching Xamarin) -->
                                        <Grid ColumnDefinitions="*,Auto,*" Margin="5,15,5,0">
                                            <BoxView Grid.Column="0" 
                                                    HeightRequest="1" 
                                                    Color="LightGray" 
                                                    VerticalOptions="Center" />
                                            <Label Grid.Column="1" 
                                                   Text="-Select Payment Method-" 
                                                   FontSize="12" 
                                                   FontAttributes="Bold"
                                                   TextColor="LightGray"
                                                   Margin="5,0" />
                                            <BoxView Grid.Column="2" 
                                                    HeightRequest="1" 
                                                    Color="LightGray" 
                                                    VerticalOptions="Center" />
                                        </Grid>

                                        <!-- Tappable field style: border + darker text so they look clickable -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
                                            <Label Grid.Column="0" Text="Payment Method:" FontSize="14" VerticalOptions="Center" />
                                            <Border Grid.Column="1" Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                    Padding="12,10" HeightRequest="48" StrokeShape="RoundRectangle 6">
                                                <Button Text="{Binding PaymentMethodText}"
                                                        Clicked="PaymentMethod_Clicked"
                                                        IsEnabled="{Binding IsEditable}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="#263238"
                                                        FontSize="14"
                                                        HorizontalOptions="Fill"
                                                        VerticalOptions="Fill"
                                                        Padding="0"
                                                        Margin="-12,-10" />
                                            </Border>
                                        </Grid>

                                        <!-- Amount and Comments row -->
                                        <Grid ColumnDefinitions="0.5*,0.5*" ColumnSpacing="5">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="Amount:" FontSize="14" />
                                                <Border Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                        Padding="12,10" HeightRequest="44" StrokeShape="RoundRectangle 6">
                                                    <Button Text="{Binding AmountText}"
                                                            Clicked="Amount_Clicked"
                                                            IsEnabled="{Binding IsEditable}"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#263238"
                                                            FontSize="14"
                                                            HorizontalOptions="Fill"
                                                            VerticalOptions="Fill"
                                                            Padding="0"
                                                            Margin="-12,-10" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="Comments:" FontSize="14" />
                                                <Border Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                        Padding="12,10" HeightRequest="44" StrokeShape="RoundRectangle 6">
                                                    <Button Text="{Binding Comments}"
                                                            Clicked="Comments_Clicked"
                                                            IsEnabled="{Binding IsEditable}"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#263238"
                                                            FontSize="14"
                                                            HorizontalOptions="Fill"
                                                            VerticalOptions="Fill"
                                                            Padding="0"
                                                            Margin="-12,-10" />
                                                </Border>
                                            </VerticalStackLayout>
                                        </Grid>
                                        
                                        <Grid ColumnDefinitions="0.6*,0.4*" ColumnSpacing="5" IsVisible="{Binding ShowRef}">
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <Label Text="{Binding RefLabelText}" FontSize="14" />
                                                <Border Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                        Padding="12,10" HeightRequest="44" StrokeShape="RoundRectangle 6">
                                                    <Button Text="{Binding RefDisplayText}"
                                                            Clicked="Ref_Clicked"
                                                            IsEnabled="{Binding IsEditable}"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#263238"
                                                            FontSize="14"
                                                            HorizontalOptions="Fill"
                                                            VerticalOptions="Fill"
                                                            Padding="0"
                                                            Margin="-12,-10" />
                                                </Border>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Grid.Column="1" Spacing="2" IsVisible="{Binding ShowPostedDate}">
                                                <Label Text="Posted Date:" FontSize="14" />
                                                <Border Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                        Padding="12,10" HeightRequest="44" StrokeShape="RoundRectangle 6">
                                                    <Button Text="{Binding PostedDate, StringFormat='{0:d}'}"
                                                            Clicked="PostedDate_Clicked"
                                                            IsEnabled="{Binding IsEditable}"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#263238"
                                                            FontSize="14"
                                                            HorizontalOptions="Fill"
                                                            VerticalOptions="Fill"
                                                            Padding="0"
                                                            Margin="-12,-10" />
                                                </Border>
                                            </VerticalStackLayout>
                                        </Grid>

                                         <!-- Image row: full width, Add / View / Change / Remove -->
                                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                            <Label Grid.Column="0" Text="Image:" FontSize="14" VerticalOptions="Center" />
                                            <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                                <!-- No image: Add Image box -->
                                                <Grid HeightRequest="56" WidthRequest="56" IsVisible="{Binding HasImage, Converter={StaticResource InvertedBoolConverter}}">
                                                    <Border Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                            StrokeShape="RoundRectangle 6" Padding="0">
                                                        <Image Source="{mi:MaterialOutlined Icon=AddPhotoAlternate, IconColor=#546E7A}"
                                                               Aspect="AspectFit"
                                                               HeightRequest="32" WidthRequest="32"
                                                               HorizontalOptions="Center" VerticalOptions="Center" />
                                                    </Border>
                                                    <Button Clicked="AddImage_Clicked"
                                                            IsEnabled="{Binding IsEditable}"
                                                            BackgroundColor="Transparent"
                                                            Opacity="0.01"
                                                            HorizontalOptions="Fill" VerticalOptions="Fill"
                                                            Padding="0" Margin="0" />
                                                </Grid>
                                                <!-- Has image: thumbnail + Change + Remove -->
                                                <HorizontalStackLayout Spacing="10" IsVisible="{Binding HasImage}">
                                                  
                                                        <Image Source="{Binding PaymentImageSource}"
                                                               Aspect="AspectFill"
                                                               HeightRequest="52" WidthRequest="52"
                                                               HorizontalOptions="Center" VerticalOptions="Center">
                                                            <Image.GestureRecognizers>
                                                                <TapGestureRecognizer Tapped="AddImage_Clicked"></TapGestureRecognizer>
                                                            </Image.GestureRecognizers>
                                                        </Image>
                                                        
                                                    <Grid ColumnSpacing="6" VerticalOptions="Center" ColumnDefinitions="auto,auto">
                                                        <Button Grid.Column="0" Text="Change" Clicked="ChangeImage_Clicked"
                                                                IsEnabled="{Binding IsEditable}"
                                                                FontSize="13" Padding="12,6"
                                                                BackgroundColor="#E3F2FD" TextColor="#1976D2"
                                                                CornerRadius="4" />
                                                        <Button Grid.Column="1" Text="Remove" Clicked="RemoveImage_Clicked"
                                                                IsEnabled="{Binding IsEditable}"
                                                                FontSize="13" Padding="12,6"
                                                                BackgroundColor="#FFEBEE" TextColor="#C62828"
                                                                CornerRadius="4" />
                                                    </Grid>
                                                </HorizontalStackLayout>
                                            </HorizontalStackLayout>
                                        </Grid>

                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10" IsVisible="{Binding ShowBank}">
                                            <Label Grid.Column="0" Text="Bank:" FontSize="14" VerticalOptions="Center" />
                                            <Border Grid.Column="1" Stroke="#B0BEC5" StrokeThickness="1" BackgroundColor="#ECEFF1"
                                                    Padding="12,10" HeightRequest="44" StrokeShape="RoundRectangle 6">
                                                <Picker ItemsSource="{Binding BankList}"
                                                        SelectedIndex="{Binding SelectedBankIndex}"
                                                        SelectedIndexChanged="Bank_SelectedIndexChanged"
                                                        IsEnabled="{Binding IsEditable}"
                                                        FontSize="14"
                                                        BackgroundColor="Transparent"
                                                        TextColor="#263238"
                                                        HorizontalOptions="Fill"
                                                        VerticalOptions="Fill"
                                                        Margin="-12,-10" />
                                            </Border>
                                            <Button Grid.Column="2"
                                                    Text="Add"
                                                    Clicked="AddBank_Clicked"
                                                    IsEnabled="{Binding IsEditable}"
                                                    FontSize="14"
                                                    HeightRequest="44"
                                                    WidthRequest="60"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="5,0,0,0" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </Grid>
    </ContentPage.Content>
</local:LaceupContentPage>

