<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.SelectInvoicePage"
             x:DataType="vm:SelectInvoicePageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Select Invoice">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <!-- Buttons at the top -->
                <Button Text="Add Payment"
                        Command="{Binding AddPaymentCommand}"
                        IsEnabled="{Binding CanAddPayment}"
                        Style="{StaticResource PrimaryButton}" />

                <Button Text="Credit Account"
                        Command="{Binding CreditAccountCommand}"
                        IsEnabled="{Binding CanCreditAccount}"
                        IsVisible="{Binding ShowCreditAccount}"
                        Style="{StaticResource SecondaryButton}" />

                <Button Text="Payment Card"
                        Command="{Binding PaymentCardCommand}"
                        IsEnabled="{Binding CanPaymentCard}"
                        IsVisible="{Binding ShowPaymentCard}"
                        Style="{StaticResource SecondaryButton}" />

                <!-- Search Bar -->
                <Border StrokeThickness="0"
                        BackgroundColor="#F2F2F7"
                        Padding="12,4"
                        StrokeShape="RoundRectangle 12">
                    <SearchBar Placeholder="Search invoices"
                               FontSize="14"
                               Text="{Binding SearchQuery}"
                               SearchButtonPressed="SearchBar_SearchButtonPressed" />
                </Border>

                <!-- Payment Term -->
                <Label Text="{Binding PaymentTermText}"
                       IsVisible="{Binding ShowPaymentTerm}"
                       TextColor="{StaticResource Gray600}" />

                <!-- Client Name -->
                <Label Text="{Binding ClientName}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}" />

                <!-- Payment Goal -->
                <Label Text="{Binding PaymentGoalText}"
                       IsVisible="{Binding ShowPaymentGoal}"
                       TextColor="{StaticResource colorLaceupGreen}"
                       FontAttributes="Bold" />

                <!-- Summary Section with Border -->
                <Border StrokeThickness="1"
                        Stroke="{StaticResource Gray200}"
                        StrokeShape="RoundRectangle 8"
                        Padding="12"
                        BackgroundColor="{StaticResource White}">
                    <VerticalStackLayout Spacing="2">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Open Balance:"
                                   FontSize="14"
                                   FontAttributes="Bold" />
                            <Label Grid.Column="1"
                                   Text="{Binding OpenBalanceValue}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Discount:"
                                   FontSize="14" />
                            <Label Grid.Column="1"
                                   Text="{Binding DiscountValue}"
                                   FontSize="14"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Invoice:"
                                   FontSize="14" />
                            <Label Grid.Column="1"
                                   Text="{Binding InvoiceValue}"
                                   FontSize="14"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Credit:"
                                   FontSize="14" />
                            <Label Grid.Column="1"
                                   Text="{Binding CreditValue}"
                                   FontSize="14"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Total:"
                                   FontSize="14" />
                            <Label Grid.Column="1"
                                   Text="{Binding TotalValue}"
                                   FontSize="14"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Label Grid.Column="0"
                                   Text="Total Balance:"
                                   FontSize="14"
                                   FontAttributes="Bold" />
                            <Label Grid.Column="1"
                                   Text="{Binding TotalBalanceValue}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                    <CollectionView ItemsSource="{Binding InvoiceItems}"
                                    SelectionMode="Multiple"
                                    x:Name="InvoiceCollectionView">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:SelectInvoiceItemViewModel">
                                <Grid Style="{StaticResource CollectionViewItemStyle}">
                                    <Frame Padding="12" Margin="0,0,0,8" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}">
                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                        <CheckBox Grid.Column="0" Grid.RowSpan="5"
                                                  IsChecked="{Binding IsSelected}"
                                                  VerticalOptions="Center" />
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Text="{Binding Title}"
                                               FontAttributes="Bold"
                                               TextColor="{Binding TextColor}" />
                                        <Label Grid.Column="1" Grid.Row="1"
                                               Text="{Binding DateText}"
                                               FontSize="13"
                                               TextColor="{Binding TextColor}" />
                                        <Label Grid.Column="1" Grid.Row="2"
                                               Text="{Binding AmountText}"
                                               FontSize="13"
                                               FontAttributes="Bold"
                                               TextColor="{Binding TextColor}"
                                               IsVisible="{Binding ShowAmount}" />
                                        
                                        <!-- Discount Display -->
                                        <Frame Grid.Column="1" Grid.Row="3"
                                               Padding="8"
                                               BackgroundColor="#E3F2FD"
                                               HasShadow="False"
                                               IsVisible="{Binding ShowDiscount}">
                                            <Label Text="{Binding DiscountText}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource PrimaryDark}" />
                                        </Frame>
                                        
                                        <!-- Goal Payment Display -->
                                        <Frame Grid.Column="1" Grid.Row="4"
                                               Padding="8"
                                               BackgroundColor="#E8F5E9"
                                               HasShadow="False"
                                               IsVisible="{Binding ShowGoalPayment}">
                                            <Label Text="{Binding GoalPaymentText}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource colorLaceupGreen}" />
                                        </Frame>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</local:LaceupContentPage>

