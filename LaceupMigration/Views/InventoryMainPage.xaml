<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.InventoryMainPage"
             Shell.TabBarIsVisible="False"
             Title="Inventory">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Button Text="{Binding ViewPrintText}"
                    Command="{Binding ViewPrintInventoryCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Check Inventory"
                    Command="{Binding CheckInventoryCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Accept Load"
                    Command="{Binding AcceptLoadCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    IsVisible="{Binding ShowAcceptLoad}"
                    IsEnabled="{Binding AcceptLoadEnabled}" />

            <Label Text="Pending Load to Accept"
                   TextColor="Red"
                   FontSize="14"
                   FontAttributes="Bold"
                   IsVisible="{Binding ShowPendingLoad}"
                   HorizontalOptions="Center" />

            <Button Text="Transfer On"
                    Command="{Binding TransferOnCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    IsVisible="{Binding ShowTransfers}" />

            <Button Text="Transfer Off"
                    Command="{Binding TransferOffCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    IsVisible="{Binding ShowTransfers}" />

            <Button Text="View Load Order"
                    Command="{Binding ViewLoadOrderCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    IsVisible="{Binding ShowLoadOrder}" />

            <Button Text="Set Par Level"
                    Command="{Binding SetParLevelCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12"
                    IsVisible="{Binding ShowParLevel}" />

            <Button Text="Cycle Count"
                    Command="{Binding CycleCountCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Inventory Summary"
                    Command="{Binding InventorySummaryCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
