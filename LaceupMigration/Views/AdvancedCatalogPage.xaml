<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AdvancedCatalogPage"
             x:DataType="vm:AdvancedCatalogPageViewModel"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="{Binding OrderTypeText}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="MENU" Command="{Binding ShowMenuCommand}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,Auto,*">
            <!-- Item Type Buttons (Sales, Dumps, Returns) - Segmented Control Style -->
            <Frame Grid.Row="0"  
                   Padding="4" 
                   Margin="8,8,8,4" 
                   HasShadow="False" 
                   CornerRadius="10" 
                   BackgroundColor="{StaticResource Gray100}"
                   BorderColor="{StaticResource Gray200}"
                   IsVisible="{Binding ShowButtonGrid}">
                <Grid x:Name="ButtonGrid" ColumnSpacing="2">
                    <Button Text="Sales"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Sales"
                            BackgroundColor="{Binding SalesButtonColor}"
                            TextColor="{Binding SalesButtonTextColor}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding SalesButtonColumn}"
                            IsVisible="{Binding ShowSalesButton}" />
                    <Button Text="Dumps"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Dumps"
                            BackgroundColor="{Binding DumpsButtonColor}"
                            TextColor="{Binding DumpsButtonTextColor}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding DumpsButtonColumn}"
                            IsVisible="{Binding ShowDumpsButton}" />
                    <Button Text="Returns"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Returns"
                            BackgroundColor="{Binding ReturnsButtonColor}"
                            TextColor="{Binding ReturnsButtonTextColor}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding ReturnsButtonColumn}"
                            IsVisible="{Binding ShowReturnsButton}" />
                </Grid>
            </Frame>

            <!-- Customer and Order Summary (Collapsible) -->
            <Frame Grid.Row="1" Padding="8,6" Margin="5,5,5,5" HasShadow="False" CornerRadius="6" BackgroundColor="{StaticResource White}">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="6" RowSpacing="4">
                    <!-- Collapsed View: Client Name and Total -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="{Binding ClientName}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           VerticalOptions="Center"
                           LineBreakMode="TailTruncation" />
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding TotalText}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           IsVisible="{Binding ShowTotalInHeader}" />
                    
                    <!-- Expand/Collapse Indicator -->
                    <Grid Grid.Row="0" Grid.Column="2" 
                          HorizontalOptions="End"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleOrderSummaryCommand}" />
                        </Grid.GestureRecognizers>
                        <Label Text="{Binding IsOrderSummaryExpanded, Converter={StaticResource ExpandIconConverter}}"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                    </Grid>
                    
                    <!-- Expanded Content -->
                    <Grid Grid.Row="1" Grid.ColumnSpan="3" 
                          RowDefinitions="Auto,Auto"
                          ColumnDefinitions="*,*,*" 
                          ColumnSpacing="8" 
                          RowSpacing="4"
                          Margin="0,4,0,0"
                          IsVisible="{Binding IsOrderSummaryExpanded}">
                        <!-- Company -->
                        <Label Grid.Row="0" Grid.ColumnSpan="3"
                               Text="{Binding CompanyText}"
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"
                               IsVisible="{Binding ShowCompany}"
                               Margin="0,0,0,4" />
                        
                        <!-- Order Metrics (Left Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="2">
                            <Label Text="{Binding LinesText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="{Binding QtySoldText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}" />
                        </VerticalStackLayout>
                        
                        <!-- Order Financials (Middle Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="2">
                            <Label Text="{Binding OrderAmountText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding CreditAmountText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding SubtotalText}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                        </VerticalStackLayout>
                        
                        <!-- Order Financials (Right Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="2" Spacing="2">
                            <Label Text="{Binding TaxText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding DiscountText}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowDiscount}" />
                            <Label Text="{Binding TotalText}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryDark}"
                                   IsVisible="{Binding ShowTotals}" />
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Frame>

            <!-- Search and Sort -->
            <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8" Padding="16,8">
                <Frame Grid.Column="0" Padding="0" HasShadow="False" BorderColor="{StaticResource Gray300}" BackgroundColor="{StaticResource White}">
                    <Grid ColumnDefinitions="*,Auto" Padding="8,0">
                        <SearchBar Grid.Column="0"
                                   Text="{Binding SearchQuery}"
                                   Placeholder="Search products..."
                                   BackgroundColor="Transparent"
                                   Margin="0" />
                        <ImageButton Grid.Column="1"
                                     Source="{mi:MaterialOutlined Icon=QrCode, IconColor=Black}"
                                     WidthRequest="40"
                                     HeightRequest="40"
                                     BackgroundColor="Transparent"
                                     Command="{Binding ScanCommand}"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center" />
                    </Grid>
                </Frame>
                <Button Grid.Column="1"
                        Text="{Binding SortByText}"
                        Command="{Binding SortCommand}"
                        Style="{StaticResource SecondaryButton}"
                        WidthRequest="120" />
            </Grid>

            <!-- Product List -->
            <CollectionView Grid.Row="3"
                            ItemsSource="{Binding FilteredItems}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="No products found."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource Gray500}" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AdvancedCatalogItemViewModel">
                        <Frame Padding="12" Margin="8,4" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                <!-- Product Image -->
                                <Image Source="{Binding ProductImagePath}"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Grid.Row="0" Grid.Column="0"
                                       Grid.RowSpan="4"
                                       Aspect="AspectFill"
                                       IsVisible="{Binding HasImage}" />

                                <!-- Product Info -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="4">
                                    <Label Text="{Binding ProductDisplayName}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}" />
                                    <Label Text="{Binding OnHandText}"
                                           FontSize="12"
                                           TextColor="Green" />
                                    <Label Text="{Binding ListPriceText}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ShowPrices}" />
                                    <Label Text="{Binding TypeText}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{Binding TypeColor}"
                                           IsVisible="{Binding ShowTypeText}" />
                                </VerticalStackLayout>

                                <!-- Price -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="2"
                                                     HorizontalOptions="End"
                                                     Spacing="2"
                                                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ShowPrices}">
                                    <Label Text="{Binding CurrentPriceText}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryDark}"
                                           IsEnabled="{Binding CanChangePrice}"
                                           TextDecorations="{Binding CanChangePrice, Converter={StaticResource BoolToTextDecorationsConverter}}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ChangePriceCommand}"
                                                                  CommandParameter="{Binding .}"
                                                                   />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Text="Select PL"
                                           FontSize="11"
                                           TextDecorations="Underline"
                                           TextColor="{StaticResource PrimaryDark}"
                                           IsVisible="{Binding ShowSelectPL}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=SelectPriceLevelCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </VerticalStackLayout>

                                <!-- History -->
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Spacing="2">
                                    <Label Text="Previously Ordered:"
                                           FontSize="11"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray700}"
                                           IsVisible="{Binding HasHistory}" />
                                    <Label Text="{Binding HistoryText}"
                                           FontSize="11"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding HasHistory}" />
                                    <Label Text="No previous orders"
                                           FontSize="11"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding HasNoHistory}" />
                                </VerticalStackLayout>

                                <!-- Details Sublines (for free items) - Show when free item exists, below primary controls -->
                                <!-- Separator between main line and free item subline -->
                                <BoxView Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                         HeightRequest="1"
                                         Color="{StaticResource Gray300}"
                                         Margin="0,8,0,4"
                                         IsVisible="{Binding HasFreeItemDetail}" />
                                
                                <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                                      ColumnDefinitions="*,Auto,Auto,Auto" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding HasFreeItemDetail}"
                                      Margin="0,4"
                                      Padding="0"
                                      VerticalOptions="Center"
                                      HorizontalOptions="FillAndExpand">
                                    <!-- Free Item Label and UoM -->
                                    <HorizontalStackLayout Grid.Column="0" 
                                                           Spacing="8"
                                                           VerticalOptions="Center"
                                                           HorizontalOptions="FillAndExpand">
                                        <Label Text="FREE"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource PrimaryDark}"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding FreeItemDetail.Detail.IsFreeItem}" />
                                        <Label Text="{Binding FreeItemDetail.UomText, StringFormat='UoM: {0}'}"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray600}"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding FreeItemDetail.UomText, Converter={StaticResource IsStringNotEmptyConverter}}" />
                                    </HorizontalStackLayout>
                                    
                                    <!-- Quantity Controls - aligned with main controls -->
                                    <Button Text="-"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=DecrementQuantityCommand}"
                                            CommandParameter="{Binding FreeItemDetail}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            FontSize="18"
                                            VerticalOptions="Center"
                                            Grid.Column="1" />
                                    <Label Text="{Binding FreeItemDetail.QuantityText}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryDark}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Grid.Column="2"
                                           Padding="12,0">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=EditQuantityCommand}"
                                                                  CommandParameter="{Binding FreeItemDetail}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Button Text="+"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=IncrementQuantityCommand}"
                                            CommandParameter="{Binding FreeItemDetail}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            FontSize="18"
                                            VerticalOptions="Center"
                                            Grid.Column="3" />
                                </Grid>
                                
                                <!-- Primary Detail Controls (always show, even when free item exists) -->
                                <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                      ColumnDefinitions="*,Auto,Auto,Auto" 
                                      ColumnSpacing="8"
                                      IsVisible="True">
                                    <Button Grid.Column="0"
                                            Text="{Binding FreeItemButtonText}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=AddFreeItemCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding CanAddFreeItem}"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            TextColor="{Binding FreeItemButtonColor}"
                                            BackgroundColor="Transparent"
                                            Padding="0"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                    <Button Text="-"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=DecrementQuantityCommand}"
                                            CommandParameter="{Binding PrimaryDetail}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            FontSize="18"
                                            Grid.Column="1" />
                                    <Label Text="{Binding QuantityText}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryDark}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Grid.Column="2"
                                           Padding="12,0">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=EditQuantityCommand}"
                                                                  CommandParameter="{Binding PrimaryDetail}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Button Text="+"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=IncrementQuantityCommand}"
                                            CommandParameter="{Binding PrimaryDetail}"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            FontSize="18"
                                            Grid.Column="3" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
