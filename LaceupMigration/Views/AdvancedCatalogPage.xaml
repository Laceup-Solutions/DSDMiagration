<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.AdvancedCatalogPage"
             x:DataType="vm:AdvancedCatalogPageViewModel"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="{Binding OrderTypeText}">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,Auto,*">
            <!-- Item Type Buttons (Sales, Dumps, Returns) - Segmented Control Style -->
            <Frame Grid.Row="0"  
                   Padding="4" 
                   Margin="8,8,8,4" 
                   HasShadow="False" 
                   CornerRadius="10" 
                   BackgroundColor="{StaticResource Gray100}"
                   BorderColor="{StaticResource Gray200}"
                   IsVisible="{Binding ShowButtonGrid}">
                <Grid x:Name="ButtonGrid" ColumnSpacing="2">
                    <Button Text="Sales"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Sales"
                            BackgroundColor="{Binding SalesButtonColor}"
                            TextColor="{Binding SalesButtonTextColor}"
                            IsEnabled="{Binding CanEdit}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding SalesButtonColumn}"
                            IsVisible="{Binding ShowSalesButton}" />
                    <Button Text="Dumps"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Dumps"
                            BackgroundColor="{Binding DumpsButtonColor}"
                            TextColor="{Binding DumpsButtonTextColor}"
                            IsEnabled="{Binding CanEdit}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding DumpsButtonColumn}"
                            IsVisible="{Binding ShowDumpsButton}" />
                    <Button Text="Returns"
                            Command="{Binding SelectItemTypeCommand}"
                            CommandParameter="Returns"
                            BackgroundColor="{Binding ReturnsButtonColor}"
                            TextColor="{Binding ReturnsButtonTextColor}"
                            IsEnabled="{Binding CanEdit}"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            BorderWidth="0"
                            Padding="12,10"
                            Grid.Column="{Binding ReturnsButtonColumn}"
                            IsVisible="{Binding ShowReturnsButton}" />
                </Grid>
            </Frame>

             <!-- Customer and Order Summary (Collapsible, expanded by default) -->
            <Frame Grid.Row="1" Padding="5" Margin="8,2" HasShadow="False" CornerRadius="8" BackgroundColor="{StaticResource White}" IsVisible="{Binding ShowOrderSummary}">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="6" RowSpacing="4">
                    <!-- Collapsed View: Client Name and Total -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="{Binding ClientName}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           VerticalOptions="Center"
                           LineBreakMode="TailTruncation" />
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding TotalText}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           IsVisible="{Binding ShowTotalInHeader}" />
                    <!-- Expand/Collapse Indicator -->
                    <Grid Grid.Row="0" Grid.Column="2"
                          HorizontalOptions="End"
                          VerticalOptions="Center"
                          WidthRequest="24"
                          HeightRequest="24">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleOrderSummaryCommand}" />
                        </Grid.GestureRecognizers>
                        <Label Text="{Binding IsOrderSummaryExpanded, Converter={StaticResource ExpandIconConverter}}"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                    </Grid>
                    <!-- Expanded Content -->
                    <Grid Grid.Row="1" Grid.ColumnSpan="3"
                          RowDefinitions="Auto,Auto,Auto"
                          ColumnDefinitions="*,*,*"
                          ColumnSpacing="3"
                          RowSpacing="4"
                          Margin="0,4,0,0"
                          IsVisible="{Binding IsOrderSummaryExpanded}">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Grid.ColumnSpan="3">
                            <Label Grid.Column="0"
                                   Text="{Binding CompanyText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray600}"
                                   IsVisible="{Binding ShowCompany}"
                                   Margin="0,0,0,0" />
                            <Label Grid.Column="1"
                                   Text="{Binding TermsText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   IsVisible="{Binding TermsVisible}"
                                   TextColor="{StaticResource Gray600}"
                                   Margin="0,0,0,0" />
                        </Grid>
                        <!-- Order Metrics (Left Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="2">
                            <Label Text="{Binding LinesText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                            <Label Text="{Binding QtySoldText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}" />
                        </VerticalStackLayout>
                        <!-- Order Financials (Middle Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="2">
                            <Label Text="{Binding OrderAmountText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding CreditAmountText}"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray900}"
                                   FontAttributes="Bold"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding SubtotalText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                        </VerticalStackLayout>
                        <!-- Order Financials (Right Column) -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="2" Spacing="2">
                            <Label Text="{Binding TaxText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Gray900}"
                                   IsVisible="{Binding ShowTotals}" />
                            <Label Text="{Binding DiscountText}"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray900}"
                                   FontAttributes="Bold"
                                   IsVisible="{Binding ShowDiscount}" />
                            <Label Text="{Binding TotalText}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource PrimaryDark}"
                                   IsVisible="{Binding ShowTotals}" />
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Frame>

            <!-- Search and Sort -->
            <Grid Grid.Row="2" RowDefinitions="*,Auto" RowSpacing="2" Padding="8,4">
                <Frame Grid.Column="0" Padding="0" HasShadow="False" BorderColor="{StaticResource Gray300}" BackgroundColor="{StaticResource White}">
                    <Grid ColumnDefinitions="*,Auto" Padding="0,0,0,0">
                        <SearchBar Grid.Row="0"
                                   Text="{Binding SearchQuery}"
                                   Placeholder="Search products..."
                                   BackgroundColor="White"
                                   Margin="0" />
                        <ImageButton Grid.Column="1"
                                     Source="{mi:MaterialOutlined Icon=QrCodeScanner, IconColor=Black}"
                                     WidthRequest="40"
                                     HeightRequest="40"
                                     BackgroundColor="Transparent"
                                     Command="{Binding ScanCommand}"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center" />
                    </Grid>
                </Frame>
                <Grid Grid.Row="1" ColumnDefinitions="auto, *" Margin="0,5">
                    <Button Grid.Column="0" 
                            Style="{StaticResource PrimaryButton}"
                            Text="{Binding WhatToViewButtonText}" 
                            Command="{Binding WhatToViewClickedCommand}"
                            IsVisible="{Binding ShowWhatToViewButton}"
                            Padding="5,2" 
                            BackgroundColor="{StaticResource colorLaceupDark}" 
                            FontAttributes="Bold"></Button>
                    <Button Grid.Column="1" Padding="2" 
                            Text="{Binding SortByText}"
                            Command="{Binding SortCommand}" 
                            BackgroundColor="Transparent" 
                            FontAttributes="Bold" 
                            HorizontalOptions="End" 
                            TextColor="{StaticResource colorLaceupDark}"/>
                </Grid>

                        
                        
            </Grid>

            <!-- Product List -->
            <CollectionView x:Name="CatalogCollectionView"
                            Grid.Row="3"
                            ItemsSource="{Binding FilteredItems}"
                            SelectionMode="None"
                            ItemsUpdatingScrollMode="KeepScrollOffset">
                <CollectionView.EmptyView>
                    <Label Text="No products found."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource Gray500}" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:AdvancedCatalogItemViewModel">
                        <Border StrokeThickness="1"
                                BackgroundColor="{Binding RowBackgroundColor}"
                                StrokeShape="RoundRectangle 8"
                                Margin="8,4"
                                Padding="12">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="12">
                                <!-- Product Image (tap opens full-screen ViewImagePage) -->
                                <Image Source="{Binding ProductImagePath}"
                                       WidthRequest="60"
                                       HeightRequest="60"
                                       Grid.Row="0" Grid.Column="0"
                                       Grid.RowSpan="4"
                                       Aspect="AspectFill"
                                       IsVisible="{Binding HasImage}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ViewImageCommand}"
                                                              CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>

                                <!-- Product Info -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="4">
                                    <Label Text="{Binding ProductDisplayName}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ViewProductDetailsCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Label Text="{Binding OnHandText}"
                                           FontSize="12"
                                           TextColor="Green" />
                                    <Label Text="{Binding TruckInventoryText}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding IsLoadOrderDisplay}" />
                                    <Label Text="{Binding ListPriceText}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowPriceAndHistoryInCells}" />
                                    <Label Text="{Binding TypeText}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{Binding TypeColor}"
                                           IsVisible="{Binding ShowTypeInCell}" />
                                    <Label Text="{Binding OrgQtyText}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding ShowOrgQty}" />
                                </VerticalStackLayout>

                                <!-- Price (hidden when load order). UOM column visible for both load order and normal so UOM works the same. -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="2"
                                                     HorizontalOptions="End"
                                                     Spacing="2"
                                                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowUomColumnInCells}">
                                    <VerticalStackLayout Spacing="2" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowPriceAndHistoryInCells}">
                                        <Label Text="{Binding CurrentPriceText}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource PrimaryDark}"
                                               IsEnabled="{Binding CanChangePrice}"
                                               TextDecorations="{Binding CanChangePrice, Converter={StaticResource BoolToTextDecorationsConverter}}">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=ChangePriceCommand}"
                                                                      CommandParameter="{Binding .}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Button Text="Select PL"
                                                FontSize="11"
                                                TextColor="{StaticResource PrimaryDark}"
                                                BackgroundColor="Transparent"
                                                Padding="0"
                                                BorderWidth="0"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=SelectPriceLevelCommand}"
                                                CommandParameter="{Binding .}"
                                                IsVisible="{Binding ShowSelectPL}"
                                                HorizontalOptions="End" />
                                    </VerticalStackLayout>
                                    <Button Text="UOM"
                                            FontSize="11"
                                            TextColor="{StaticResource PrimaryDark}"
                                            BackgroundColor="Transparent"
                                            Padding="0"
                                            BorderWidth="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdvancedCatalogPageViewModel}}, Path=PickUomCommand}"
                                            CommandParameter="{Binding .}"
                                            IsVisible="{Binding HasUoms}"
                                            HorizontalOptions="End" />
                                </VerticalStackLayout>

                                <!-- History (hidden when load order) -->
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Spacing="2"
                                                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowPriceAndHistoryInCells}">
                                    <Label Text="Previously Ordered:"
                                           FontSize="11"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray700}"
                                           IsVisible="{Binding HasHistory}" />
                                    <Label Text="{Binding HistoryText}"
                                           FontSize="11"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding HasHistory}" />
                                    <Label Text="No previous orders"
                                           FontSize="11"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding HasNoHistory}" />
                                </VerticalStackLayout>

                                <!-- Details Sublines (free items + UOM sublines) - BindableLayout avoids nested CollectionView for better virtualization -->
                                <BoxView Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                                         HeightRequest="1"
                                         Color="{StaticResource Gray300}"
                                         Margin="0,8,0,4"
                                         IsVisible="{Binding ShowSublinesInCell}" />
                                
                                <VerticalStackLayout Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                                                     BindableLayout.ItemsSource="{Binding DetailsWithOrderDetail}"
                                                     IsVisible="{Binding ShowSublinesInCell}"
                                                     Spacing="4"
                                                     Margin="0,4">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="vm:AdvancedCatalogItemViewModel+AdvancedCatalogDetailViewModel">
                                            <Grid ColumnDefinitions="*,Auto,Auto,Auto"
                                                  ColumnSpacing="8"
                                                  Margin="0,2"
                                                  VerticalOptions="Center">
                                                <Grid Grid.Column="0" RowSpacing="3" VerticalOptions="Center" HorizontalOptions="FillAndExpand" RowDefinitions="auto,auto,auto">
                                                    <Label Grid.Row="0" Text="FREE" FontSize="15" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}" VerticalOptions="Center"
                                                           IsVisible="{Binding Detail.IsFreeItem}" />
                                                    <Label Grid.Row="1" Text="{Binding UomText, StringFormat='UoM: {0}'}" FontSize="11" FontAttributes="Bold" TextColor="{StaticResource Gray600}" VerticalOptions="Center"
                                                           IsVisible="{Binding UomText, Converter={StaticResource IsStringNotEmptyConverter}}" />
                                                    <Label Grid.Row="2" Text="{Binding PriceText, StringFormat='Price: {0}'}" FontSize="11" TextColor="{StaticResource Gray600}" VerticalOptions="Center"
                                                           IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsFromLoadOrder, Converter={StaticResource InvertedBoolConverter}}" />
                                                </Grid>
                                                <Button Grid.Column="1" Text="-"
                                                        Style="{StaticResource PrimaryButton}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DecrementQuantityCommand}"
                                                        CommandParameter="{Binding .}"
                                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}"
                                                        WidthRequest="40" HeightRequest="40" FontSize="18" VerticalOptions="Center" />
                                                <Label Grid.Column="2" Text="{Binding QuantityText}" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource PrimaryDark}"
                                                       VerticalOptions="Center" HorizontalOptions="Center" Padding="12,0"
                                                       IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditQuantityCommand}"
                                                                              CommandParameter="{Binding .}" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Button Grid.Column="3" Text="+"
                                                        Style="{StaticResource PrimaryButton}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IncrementQuantityCommand}"
                                                        CommandParameter="{Binding .}"
                                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}"
                                                        WidthRequest="40" HeightRequest="40" FontSize="18" VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                                
                                <!-- Primary Detail Controls (always show, even when free item exists) -->
                                <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                      ColumnDefinitions="*,Auto,Auto,Auto" 
                                      ColumnSpacing="8"
                                      IsVisible="True">
                                    <Button Grid.Column="0"
                                            Text="{Binding FreeItemButtonText}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddFreeItemCommand}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding CanAddFreeItem}"
                                            IsVisible="{Binding ShowFreeItemButtonInCell}"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            TextColor="{Binding FreeItemButtonColor}"
                                            BackgroundColor="Transparent"
                                            Padding="0"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                    <Button Text="-"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DecrementQuantityCommand}"
                                            CommandParameter="{Binding PrimaryDetail}"
                                            IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}"
                                            WidthRequest="40"
                                            Style="{StaticResource PrimaryButton}"
                                            HeightRequest="40"
                                            FontSize="18"
                                            Grid.Column="1" />
                                    <Label Text="{Binding QuantityText}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource PrimaryDark}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Grid.Column="2"
                                           Padding="12,0"
                                           IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditQuantityCommand}"
                                                                  CommandParameter="{Binding PrimaryDetail}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <Button Text="+"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IncrementQuantityCommand}"
                                            CommandParameter="{Binding PrimaryDetail}"
                                            IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CanEdit}"
                                            WidthRequest="40"
                                            Style="{StaticResource PrimaryButton}"
                                            HeightRequest="40"
                                            FontSize="18"
                                            Grid.Column="3" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</local:LaceupContentPage>
