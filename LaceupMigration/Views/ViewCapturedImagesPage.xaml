<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.ViewCapturedImagesPage"
             x:DataType="vm:ViewCapturedImagesPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Shell.BackgroundColor="{StaticResource White}"
             Title="{Binding TitleText}"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,*">
            <!-- Done button and Take Picture row -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="8" Padding="16,8">
                <Button Grid.Column="0"
                        Text="Done"
                        Command="{Binding DoneCommand}"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalOptions="Start" />
            </Grid>

            <!-- Take Picture area -->
            <Border Grid.Row="1" StrokeThickness="1" Stroke="{StaticResource Gray300}"
                    BackgroundColor="{StaticResource White}" Padding="20" Margin="16,8">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TakePhotoCommand}" />
                </Border.GestureRecognizers>
                <VerticalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="Take Picture"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Images In Order -->
            <ScrollView Grid.Row="2">
                <VerticalStackLayout Padding="16" Spacing="8">
                    <Label Text="Images In Order"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryDark}"
                           Margin="0,8,0,8" />

                    <Label Text="No images in this order."
                           IsVisible="{Binding ShowNoImages}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,20,0,20"
                           TextColor="{StaticResource Gray500}"
                           FontSize="14" />

                    <CollectionView ItemsSource="{Binding Images}"
                                    SelectionMode="None"
                                    IsVisible="{Binding ShowImages}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:OrderCapturedImageViewModel">
                                <Frame Padding="8" Margin="0,0,0,8" HasShadow="False"
                                       BorderColor="{StaticResource Gray200}"
                                       CornerRadius="8">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                        <Image Grid.Column="0"
                                               Source="{Binding ImagePath}"
                                               Aspect="AspectFill"
                                               HeightRequest="100"
                                               WidthRequest="100">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ViewCapturedImagesPageViewModel}}, Path=ViewImageCommand}"
                                                                       CommandParameter="{Binding .}" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <Label Grid.Column="1" Text="{Binding Caption}"
                                               FontSize="14"
                                               TextColor="{StaticResource Gray900}"
                                               VerticalOptions="Center" />
                                        <Button Grid.Column="2"
                                                Text="Delete"
                                                BackgroundColor="#DC3545"
                                                TextColor="White"
                                                FontSize="14"
                                                Padding="12,6"
                                                VerticalOptions="Center"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ViewCapturedImagesPageViewModel}}, Path=DeleteImageCommand}"
                                                CommandParameter="{Binding .}" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</local:LaceupContentPage>
