<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.TransferOnOffPage"
             Shell.TabBarIsVisible="False"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="MENU" Command="{Binding ShowMenuCommand}" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <Grid Padding="0,10,0,0" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="8">
        <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="16,0">
            <Button Text="{Binding FilterButtonText}" 
                    Command="{Binding ToggleFilterCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsEnabled="{Binding ReadOnly, Converter={StaticResource InvertedBoolConverter}}" />
            <Button Text="Print"
                    Command="{Binding PrintCommand}"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand"
                    IsEnabled="{Binding ReadOnly, Converter={StaticResource InvertedBoolConverter}}" />
        </HorizontalStackLayout>

        <!-- Sort Button (positioned to the right) -->
        <Label Grid.Row="1"
               Text="{Binding SortButtonText}"
               FontSize="16"
               TextColor="{StaticResource colorLaceupDark}"
               HorizontalOptions="End"
               Margin="16,5,16,2">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="SortButton_Tapped" />
            </Label.GestureRecognizers>
        </Label>

        <SearchBar Grid.Row="2"
                   Text="{Binding SearchQuery}"
                   Placeholder="Search products..."
                   Margin="16,0"
                   IsEnabled="{Binding ReadOnly, Converter={StaticResource InvertedBoolConverter}}" />

        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding TransferLines}"
                        Margin="16,0,16,8">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:TransferLineViewModel">
                    <Frame Padding="12"
                           Margin="0,4"
                           BackgroundColor="{StaticResource White}"
                           HasShadow="False"
                           CornerRadius="0">
                        <VerticalStackLayout Spacing="0">
                            <!-- Main Cell Content: Product Name, Inventory, UoM, Add Button -->
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" Padding="0,0,5,0">
                                <!-- Left side: Product info -->
                                <VerticalStackLayout Grid.Column="0" Spacing="2">
                                    <!-- Product Name -->
                                    <Label Text="{Binding ProductName}"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource colorLaceupDark}" />
                                    
                                    <!-- Starting Inventory -->
                                    <Label Text="{Binding StartingInventoryText}"
                                           FontSize="12"
                                           TextColor="{Binding StartingInventoryColor}" />
                                    
                                    <!-- Current Inventory -->
                                    <Label Text="{Binding CurrentInventoryText}"
                                           FontSize="12"
                                           TextColor="#666666" />
                                    
                                    <!-- UoM Display -->
                                    <Label Text="{Binding UomText}"
                                           FontSize="12"
                                           TextColor="#666666"
                                           IsVisible="{Binding ShowUom}" />
                                </VerticalStackLayout>
                                
                                <!-- Right side: Add Qty Button -->
                                <Button Grid.Column="1"
                                        Text="+"
                                        Command="{Binding AddQtyCommand}"
                                        IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                        WidthRequest="50"
                                        HeightRequest="40"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Margin="5,0,0,0" />
                            </Grid>
                            
                            <!-- Divider Line -->
                            <BoxView HeightRequest="1"
                                     Color="{StaticResource Gray300}"
                                     Margin="0,5" />
                            
                            <!-- Details List (nested sub-cells) -->
                            <CollectionView ItemsSource="{Binding Details}"
                                            Margin="0">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:TransferLineDetViewModel">
                                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" Padding="0,4,5,4">
                                            <!-- Left side: Lot and UoM (80% equivalent) -->
                                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                                <!-- Lot -->
                                                <Label Text="{Binding LotText}"
                                                       FontSize="12"
                                                       TextColor="#666666"
                                                       IsVisible="{Binding ShowLot}" />
                                                
                                                <!-- UoM -->
                                                <Label Text="{Binding UomText}"
                                                       FontSize="12"
                                                       TextColor="#666666"
                                                       IsVisible="{Binding ShowUom}" />
                                            </VerticalStackLayout>
                                            
                                            <!-- Right side: Qty Button (20% equivalent) -->
                                            <Button Grid.Column="1"
                                                    Text="{Binding QtyText}"
                                                    Command="{Binding EditQtyCommand}"
                                                    IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ReadOnly, Converter={StaticResource InvertedBoolConverter}}"
                                                    WidthRequest="50"
                                                    HeightRequest="40"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Center"
                                                    Margin="5,0,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</local:LaceupContentPage>

