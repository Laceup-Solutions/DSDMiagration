<?xml version="1.0" encoding="utf-8" ?>
<local:LaceupContentPage xmlns:local="clr-namespace:LaceupMigration.Views" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.EditClientPage"
             x:DataType="vm:EditClientPageViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             Title="Edit Customer">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Entry Text="{Binding Name}"
                       Placeholder="Customer Name"
                       FontSize="16" />

                <Entry Text="{Binding ContactName}"
                       Placeholder="Contact Name"
                       FontSize="16" />

                <Entry Text="{Binding Phone}"
                       Placeholder="Phone"
                       Keyboard="Telephone"
                       FontSize="16" />

                <Entry Text="{Binding Email}"
                       Placeholder="Email"
                       Keyboard="Email"
                       FontSize="16" />

                <Entry Text="{Binding Address1}"
                       Placeholder="Address Line 1"
                       FontSize="16" />

                <Entry Text="{Binding Address2}"
                       Placeholder="Address Line 2"
                       FontSize="16" />

                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Entry Grid.Column="0" Text="{Binding City}" Placeholder="City" FontSize="16" />
                    <Entry Grid.Column="1" Text="{Binding State}" Placeholder="State" FontSize="16" />
                </Grid>

                <Entry Text="{Binding Zip}"
                       Placeholder="Zip Code"
                       FontSize="16" />

                <HorizontalStackLayout Spacing="8" IsVisible="{Binding ShowCanChangePrices}">
                    <CheckBox IsChecked="{Binding CanChangePrices}" />
                    <Label Text="Can Change Prices"
                           VerticalOptions="Center"
                           FontSize="14" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <CheckBox IsChecked="{Binding Taxable}" />
                    <Label Text="Taxable"
                           VerticalOptions="Center"
                           FontSize="14" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <CheckBox IsChecked="{Binding OneDoc}" />
                    <Label Text="Allow One Doc"
                           VerticalOptions="Center"
                           FontSize="14" />
                </HorizontalStackLayout>

                <Entry Text="{Binding TaxRate}"
                       Placeholder="Tax Rate"
                       IsEnabled="{Binding Taxable}"
                       Keyboard="Numeric"
                       FontSize="16" />

                <Entry Text="{Binding LicenseNumber}"
                       Placeholder="License Number"
                       FontSize="16" />

                <Picker ItemsSource="{Binding PriceLevels}"
                        SelectedItem="{Binding SelectedPriceLevelItem}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Price Level"
                        FontSize="16" />

                <Picker ItemsSource="{Binding RetailPriceLevels}"
                        SelectedItem="{Binding SelectedRetailPriceLevelItem}"
                        ItemDisplayBinding="{Binding Name}"
                        Title="Retail Price Level"
                        FontSize="16" />

                <Button Text="{Binding TermsText}"
                        Command="{Binding SelectTermsCommand}"
                        IsVisible="{Binding ShowTerms}"
                        HorizontalOptions="Fill" />

                <!-- Add Bill To Address button -->
                <Button Text="Edit Bill To Address"
                        Command="{Binding SelectBillToCommand}"
                        HorizontalOptions="Fill"
                        Margin="0,8,0,0" />

                <Button Text="Save"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,16,0,0" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</local:LaceupContentPage>

