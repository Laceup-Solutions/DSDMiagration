<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LaceupMigration.ViewModels"
             x:Class="LaceupMigration.Views.ConfigurationPage"
             Shell.TabBarIsVisible="False"
             Title="Configuration">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" 
                     Command="{Binding SaveCommand}" 
                     Order="Primary" 
                     Priority="0" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="{Binding Version, StringFormat='Version: {0}'}"
                   FontSize="16"
                   FontAttributes="Bold" />

            <Label Text="Connection Settings"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <Entry Text="{Binding InternetServer}"
                   Placeholder="Internet Server"
                   IsEnabled="{Binding CanModifyConnectionSettings}"
                   FontSize="16" />

            <Entry Text="{Binding LanServer}"
                   Placeholder="LAN Server"
                   IsEnabled="{Binding CanModifyConnectionSettings}"
                   FontSize="16" />

            <Entry Text="{Binding Port}"
                   Placeholder="Port"
                   IsEnabled="{Binding CanModifyConnectionSettings}"
                   Keyboard="Numeric"
                   FontSize="16" />

            <Entry Text="{Binding SSID}"
                   Placeholder="SSID"
                   IsEnabled="{Binding CanModifyConnectionSettings}"
                   FontSize="16" />

            <Label Text="{Binding CurrentSSID}"
                   FontSize="14"
                   TextColor="#666666" />

            <Label Text="Salesman Settings"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <Entry Text="{Binding VendorName}"
                   Placeholder="Vendor Name"
                   IsEnabled="{Binding CanChangeSalesmanId}"
                   FontSize="16" />

            <Entry Text="{Binding VendorId}"
                   Placeholder="Vendor ID"
                   IsEnabled="{Binding CanChangeSalesmanId}"
                   Keyboard="Numeric"
                   FontSize="16" />

            <Label Text="{Binding DeviceId, StringFormat='Device ID: {0}'}"
                   FontSize="14"
                   TextColor="#666666" />

            <Entry Text="{Binding NextOrderId}"
                   Placeholder="Next Order ID"
                   Keyboard="Numeric"
                   FontSize="16" />

            <Label Text="Actions"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0" />

            <Button Text="Setup Printer"
                    Command="{Binding SetupPrinterCommand}"
                    IsVisible="{Binding ShowPrinterButton}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Setup Scanner"
                    Command="{Binding SetupScannerCommand}"
                    IsVisible="{Binding ShowScannerButton}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Select Logo"
                    Command="{Binding SelectLogoCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Reset Password"
                    Command="{Binding ResetPasswordCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="See Log"
                    Command="{Binding SeeLogCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Send Log"
                    Command="{Binding SendLogCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Export Data"
                    Command="{Binding ExportDataCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Restore Data"
                    Command="{Binding RestoreDataCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />

            <Button Text="Clear Data"
                    Command="{Binding CleanDataCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="16"
                    Padding="16,12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
